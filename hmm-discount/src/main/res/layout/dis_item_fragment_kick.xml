<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#000"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:id="@+id/kickPLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/shape_act_k_w_12"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kickTopLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/grab_kick_top"
                app:layout_constraintDimensionRatio="710:120"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.healthy.library.widget.ImageTextView
                android:id="@+id/topTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="每日必砍"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/kickTitleLfet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_act_k_w_12"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/topTitle"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/kickHeadIconLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="2dp"
                    android:paddingLeft="4dp"
                    android:orientation="horizontal">
                    <!--<include layout="@layout/dis_item_head_h"/>-->

                    <com.healthy.library.widget.CornerImageView
                        app:is_circle="true"
                        android:src="@drawable/tx09"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>

                    <com.healthy.library.widget.CornerImageView
                        app:is_circle="true"
                        android:src="@drawable/tx08"
                        android:layout_marginLeft="-4dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>

                    <com.healthy.library.widget.CornerImageView
                        app:is_circle="true"
                        android:src="@drawable/tx10"
                        android:layout_marginLeft="-4dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/kickMenber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#ff222222"
                    android:textSize="10sp"
                    tools:text="792人正在砍价" />
            </LinearLayout>

            <com.healthy.library.widget.ImageTextView
                android:id="@+id/kickMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:drawablePadding="2dp"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="更多"
                android:textColor="#97574F"
                android:textSize="10sp"
                app:drawable="@drawable/more_w_kill_g"
                app:drawableHeight="7dp"
                app:drawableWidth="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:position="3" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/kickLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingBottom="10dp">

                <!--                                                                                            <include layout="@layout/dis_item_kick_h" />-->
                <!--                                            <include layout="@layout/dis_item_kick_h" />-->
                <!--                                            <include layout="@layout/dis_item_kick_h" />-->

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>