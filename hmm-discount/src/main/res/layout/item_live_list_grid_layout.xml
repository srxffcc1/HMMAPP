<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.healthy.library.widget.CornerImageView
        android:id="@+id/itemGoodsImg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/img_1_1_default"
        app:corner_radius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/liveMoreImg"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:scaleType="fitXY"
        android:src="@drawable/live_list_more"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/itemGoodsImg"
        app:layout_constraintRight_toRightOf="@id/itemGoodsImg"
        app:layout_constraintTop_toTopOf="@id/itemGoodsImg" />
</androidx.constraintlayout.widget.ConstraintLayout>