<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:id="@+id/topLL"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="710:80"/>
        <com.healthy.library.widget.ImageTextView
            android:id="@+id/topTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="爆款清单"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#222222"
            android:textSize="16sp"
            />
        <com.healthy.library.widget.ImageTextView
            android:layout_marginLeft="6dp"
            app:layout_constraintLeft_toRightOf="@id/topTitle"
            android:id="@+id/topSecondTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_act_o_r"
            app:drawable="@drawable/icon_point_left"
            app:drawableWidth="14dp"
            app:drawableHeight="14dp"
            android:paddingLeft="3dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="进店必买"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            />


        <com.healthy.library.widget.ImageTextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:position="3"
            android:id="@+id/topMore"
            app:drawableHeight="7dp"
            app:drawableWidth="7dp"
            android:drawablePadding="2dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_marginRight="12dp"
            app:drawable="@drawable/more_w_kill_gg"
            android:text="更多"
            android:textColor="#868799"
            android:textSize="10sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>