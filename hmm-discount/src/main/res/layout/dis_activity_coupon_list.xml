<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/card_center_top_bg"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintLeft_toLeftOf="@id/top_bar"
        app:layout_constraintRight_toRightOf="@id/top_bar"
        app:layout_constraintTop_toTopOf="@id/top_bar"/>

    <com.healthy.library.widget.TopBar
        android:id="@+id/top_bar"
        app:bg_color="@color/trans_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:show_moss="false"
        app:submit=""
        android:paddingTop="@dimen/status_2020"
        app:back_img_src="@drawable/ic_back_white"
        app:title_color="@color/white"
        app:submit_color="@color/white"
        app:is_show_submit="true"
        app:title="优惠券"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="#FF6266"
        app:tabIndicatorColor="#FF6266"
        app:tabTextColor="#444444"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_header_shadow"
        app:layout_constraintTop_toBottomOf="@id/tab"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:background="#fff5f5f9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/couponBottom"
        app:layout_constraintTop_toBottomOf="@id/tab"/>



    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/couponBottom"
        android:elevation="1dp"
        android:background="#fff5f5f9"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/couponHistoryLL"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent">
                <com.healthy.library.widget.ImageTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券历史"
                    android:gravity="center_vertical"
                    android:id="@+id/couponHistory"
                    app:drawableHeight="28dp"
                    app:drawableWidth="28dp"
                    android:drawablePadding="4dp"
                    app:drawable="@drawable/pack_history_left"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/packSplit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#ff444444"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/packSplit"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="#C4CBDD"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                </TextView>
                <com.healthy.library.widget.ImageTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去领券中心逛逛"
                    app:drawableHeight="28dp"
                    app:drawableWidth="28dp"
                    android:gravity="center_vertical"
                    android:id="@+id/couponCenter"
                    android:drawablePadding="4dp"
                    app:drawable="@drawable/pack_history_right"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/packSplit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#ff444444"
                    android:textSize="13sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:layout_width="84dp"
                android:layout_height="19dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/pack_center_tip"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"></ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/couponDeleteBlock"
            android:background="#FFF"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="60dp">
            <CheckBox
                android:id="@+id/allCheck"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                android:button="@drawable/selector_anonymous"
                />
            <TextView
                android:id="@+id/allCheckRight"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@id/allCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="全选"
                android:textColor="#ff444444"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/checkCancel"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/checkDelete"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="取消"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#ff9596a4"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/checkDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@drawable/shape_mall_goods_ol_vid_orderbtn"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>