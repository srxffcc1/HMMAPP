<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#000"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:id="@+id/cityShopLin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:id="@+id/cityTopTitle"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="710:60"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.healthy.library.widget.ImageTextView
                android:id="@+id/topCityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:text="同城优购"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="16sp"
                app:drawable="@drawable/act_city_shop_icon"
                app:drawableHeight="22dp"
                app:drawableWidth="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.healthy.library.widget.ImageTextView
                android:id="@+id/topSecondTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:paddingLeft="3dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:textColor="#868799"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/topCityTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:text="带你探寻身边的精彩好物" />


            <com.healthy.library.widget.ImageTextView
                android:id="@+id/topMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="更多"
                android:textColor="#868799"
                android:textSize="10sp"
                android:visibility="invisible"
                app:drawable="@drawable/more_w_kill_gg"
                app:drawableHeight="7dp"
                app:drawableWidth="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:position="3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_act_k_w_12"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/shopCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/shopIcon"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_1_1_default"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/videoTip"
                    android:layout_width="52dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/icon_left_shop_video"
                    android:visibility="invisible"
                    app:layout_constraintLeft_toLeftOf="@id/shopIcon"
                    app:layout_constraintTop_toTopOf="@id/shopIcon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/shopIcon"
                    app:layout_constraintRight_toRightOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/shopName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#ff222222"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="婷美摩力21木渎金山店" />

                        <com.healthy.library.widget.ImageTextView
                            android:id="@+id/loc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:drawablePadding="2dp"
                            android:textSize="11sp"
                            app:drawable="@drawable/ic_sub_left_loc"
                            app:drawableHeight="14dp"
                            android:singleLine="true"
                            app:drawableWidth="14dp"
                            app:layout_constraintLeft_toLeftOf="@id/shopName"
                            app:layout_constraintRight_toLeftOf="@+id/locDistance"
                            app:layout_constraintTop_toBottomOf="@id/shopName"
                            tools:text="苏州市高新区滨河路299号乐嘉汇…" />

                        <TextView
                            android:id="@+id/locDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="1.2km"
                            android:textColor="#ff666666"
                            android:textSize="11sp"
                            app:layout_constraintBottom_toBottomOf="@id/loc"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/loc" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/couponMore"
                            android:layout_width="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="14dp"
                            android:src="@drawable/act_fragment_city_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/locDistance" />

                        <HorizontalScrollView
                            android:id="@+id/goodsCouponPLL"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="@id/shopName"
                            app:layout_constraintRight_toLeftOf="@id/couponMore"
                            app:layout_constraintTop_toBottomOf="@id/loc">

                            <LinearLayout
                                android:id="@+id/goodsCouponLL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"></LinearLayout>
                        </HorizontalScrollView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.healthy.library.widget.DashLine
                android:id="@+id/couponDash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:com_color="@color/c_d1d8e2"
                app:com_vertical="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/dis_item_head_h" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/manCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_act_p_r"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:textColor="#fff00028"
                        android:textSize="10sp"
                        tools:text="763人刚买过" />
                </LinearLayout>

                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/bottomGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                    </LinearLayout>

                </HorizontalScrollView>



            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>