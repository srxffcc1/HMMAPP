<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/titleFirst"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精选"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#fff02846"
        android:textSize="15sp"
        />
    <ImageView
        android:id="@+id/titleBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/tab_text_bg"
        app:layout_constraintTop_toTopOf="@id/titleSecond"
        app:layout_constraintBottom_toBottomOf="@id/titleSecond"
        app:layout_constraintRight_toRightOf="@id/titleSecond"
        app:layout_constraintLeft_toLeftOf="@id/titleSecond"/>
    <TextView
        android:id="@+id/titleSecond"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/titleFirst"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猜你喜欢"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        />
    <TextView
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        app:layout_constraintTop_toBottomOf="@id/titleSecond"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
