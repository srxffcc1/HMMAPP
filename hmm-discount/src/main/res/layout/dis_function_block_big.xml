<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/parent_category"
    android:layout_margin="4dp"
    android:background="@drawable/shape_item_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="5dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/blockGoodsIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_1_1_default2">
        </ImageView>
        <ImageView
            android:id="@+id/blockGoodsEmpty"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/point_soldout_icon"
            app:layout_constraintTop_toTopOf="@id/blockGoodsIcon"
            app:layout_constraintBottom_toBottomOf="@id/blockGoodsIcon"
            app:layout_constraintLeft_toLeftOf="@id/blockGoodsIcon"
            app:layout_constraintRight_toRightOf="@id/blockGoodsIcon"/>
        <TextView
            android:id="@+id/blockGoodsTitle"
            app:layout_constraintTop_toBottomOf="@id/blockGoodsIcon"
            android:layout_width="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:text="美素佳儿婴幼儿配方奶粉1段800g"
            android:textColor="#ff222222"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/blockGoodsPoint"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toBottomOf="@id/blockGoodsTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12560积分"
            android:textColor="#fff02846"
            android:textSize="12sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
