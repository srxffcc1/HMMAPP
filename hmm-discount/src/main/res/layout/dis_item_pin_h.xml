<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="78dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.healthy.library.widget.CornerImageView
        app:corner_radius="2dp"
        android:id="@+id/pinGoodsImg"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/img_1_1_default" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/pinLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/pinPeopleNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#ff7b5411"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人拼"
                android:textColor="#ff7b5411"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:background="@drawable/shape_act_p_under"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/pinLL"
            app:layout_constraintRight_toRightOf="@+id/pinLL"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#fff00028"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pinPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39.9"
            android:textColor="#fff00028"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/pinOldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥79"
        android:visibility="gone"
        android:textColor="#ff868799"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinLiner"
        android:background="@drawable/shape_act_r_under"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/pinTotalNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="96"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人已拼"
            android:textColor="#ffffffff"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>