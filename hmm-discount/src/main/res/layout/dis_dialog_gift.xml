<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:background="#000"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/giftParentLLZ"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/giftParentLL"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/giftParentLLBg"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintDimensionRatio="756:1076"
                    android:layout_height="0dp"
                    android:src="@drawable/biggiftbg"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.80"
                    app:layout_constraintHeight_percent="0.78"
                    app:layout_constraintLeft_toLeftOf="@id/giftParentLLBg"
                    app:layout_constraintRight_toRightOf="@id/giftParentLLBg"
                    app:layout_constraintBottom_toBottomOf="@id/giftParentLLBg">
                    <TextView
                        android:id="@+id/giftBigTitleLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="注册领券"
                        android:textColor="#ffffffff"
                        android:textSize="22sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:layout_constraintTop_toBottomOf="@id/giftBigTitleLL"
                        app:layout_constraintBottom_toTopOf="@id/giftTipLL">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/recyclerTopLL"
                            android:visibility="gone"
                            android:background="@drawable/shape_biggift_bg"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="180">
                            <TextView
                                android:id="@+id/recyclerTopTitle"
                                android:padding="6dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:text="渠道专享礼包"
                                android:textColor="#ffffd984"
                                android:textSize="14sp"
                                />
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerTop"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:paddingBottom="5dp"
                                app:layout_constraintTop_toBottomOf="@id/recyclerTopTitle"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/recyclerCenter"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            android:layout_weight="7"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/recyclerBottomLL"
                            android:visibility="gone"
                            android:background="@drawable/shape_biggift_bg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="180">
                            <TextView
                                android:id="@+id/recyclerBottomTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:text="新人专享礼包"
                                android:textStyle="bold"
                                android:padding="6dp"
                                android:textColor="#ffffd984"
                                android:textSize="14sp"
                                />
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerBottom"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:paddingBottom="5dp"
                                app:layout_constraintTop_toBottomOf="@id/recyclerBottomTitle"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/giftTipLL"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:layout_height="10dp"
                        android:gravity="center"
                        android:textColor="#FFE3CD"
                        android:text="领取后可在个人中心“优惠劵”页面查看"></TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/giftOneKey"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/giftParentLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/getgiftonekey"/>
            <ImageView
                app:layout_constraintTop_toBottomOf="@id/giftOneKey"
                android:id="@+id/dialog_close_button"
                android:layout_width="30dp"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="30dp"
                android:src="@drawable/dis_dialog_close"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>