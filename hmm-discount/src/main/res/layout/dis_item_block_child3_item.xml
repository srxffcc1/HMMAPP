<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_category"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:background="@drawable/shape_act_k_l"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1_1_default2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/postImage"
        android:layout_width="match_parent"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_act_k_l_under">
        <TextView
            android:id="@+id/postTitle"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@id/postGo"
            android:layout_height="wrap_content"
            tools:text="合生元热销爆款营养限时特惠专场"
            android:textColor="#ff222222"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/postSecondTitle"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/postTitle"
            app:layout_constraintLeft_toLeftOf="@id/postTitle"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            tools:text="抢限量150元大额立减券"
            android:textColor="#ff666666"
            android:textSize="13sp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:id="@+id/postGo"
            android:src="@drawable/go_act_btn"
            app:layout_constraintTop_toTopOf="@id/postTitle"
            app:layout_constraintBottom_toBottomOf="@id/postTitle"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/postSecondTitle"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/postHeadIconLL"
                android:layout_height="wrap_content">
<!--                <include layout="@layout/dis_item_head_h"/>-->
            </LinearLayout>
            <TextView
                android:background="@drawable/shape_act_p_r"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:id="@+id/postMenber"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="763人刚买过"
                android:visibility="gone"
                android:textColor="#fff00028"
                android:textSize="10sp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
