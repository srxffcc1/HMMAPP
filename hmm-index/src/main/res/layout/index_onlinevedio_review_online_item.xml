<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    tools:ignore="SpUsage">

    <LinearLayout
        android:id="@+id/leftVidePic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="120dp"
        android:layout_height="wrap_content">
        <include layout="@layout/index_mon_onlinevideo_item_no"></include>
    </LinearLayout>
    <TextView
        android:id="@+id/leftVideoTitle"
        android:textStyle="bold"
        android:layout_marginRight="1dp"
        app:layout_constraintTop_toTopOf="@id/leftVidePic"
        app:layout_constraintLeft_toRightOf="@id/leftVidePic"
        android:layout_width="0dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="让孩子爱上学习的趣味游戏"
        android:textColor="#ff222222"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/leftVideoSecTitle"
        app:layout_constraintTop_toBottomOf="@id/leftVideoTitle"
        app:layout_constraintBottom_toTopOf="@id/leftVideMoney"
        app:layout_constraintLeft_toLeftOf="@id/leftVideoTitle"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="国家二级心理咨询师"
        android:textColor="#ff666666"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/leftVideMoney"
        app:layout_constraintLeft_toLeftOf="@id/leftVideoTitle"
        app:layout_constraintBottom_toBottomOf="@id/leftVidePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥29.9"
        android:textColor="#ff444444"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/leftVideMoneyTip"
        app:layout_constraintLeft_toRightOf="@id/leftVideMoney"
        app:layout_constraintTop_toTopOf="@id/leftVideMoney"
        app:layout_constraintBottom_toBottomOf="@id/leftVideMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="限时免费"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="#ff44d7b6"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/leftVideoMan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/leftVideMoney"
        app:layout_constraintBottom_toBottomOf="@id/leftVideMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3096人已看"
        android:textColor="#ff444444"
        android:textSize="10sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>