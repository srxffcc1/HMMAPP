<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:id="@+id/hasContent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vacName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="甲肝减毒活疫苗"
            android:textColor="#434343"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/mustTip"
            android:background="@drawable/shape_tools_vacc_rr"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="4dp"
            android:layout_marginLeft="15dp"
            android:paddingRight="4dp"
            app:layout_constraintLeft_toRightOf="@+id/vacName"
            app:layout_constraintTop_toTopOf="@+id/vacName"
            app:layout_constraintBottom_toBottomOf="@id/vacName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="必打"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/dateTip"
            android:background="@drawable/shape_tools_vacc_rr"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="4dp"
            android:layout_marginLeft="15dp"
            android:paddingRight="4dp"
            app:layout_constraintLeft_toRightOf="@+id/mustTip"
            app:layout_constraintTop_toTopOf="@+id/vacName"
            app:layout_constraintBottom_toBottomOf="@id/vacName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="过期"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/vacCount"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="@id/vacName"
            app:layout_constraintTop_toBottomOf="@id/vacName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接种一次"
            android:textColor="#656565"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/vacTip"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="@id/vacName"
            app:layout_constraintTop_toBottomOf="@id/vacCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预防甲型肝炎"
            android:textColor="#ff999999"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/vacCheck"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingLeft="25dp"
            android:src="@drawable/tools_vac_radio_normal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/lastLine"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#BDBECB"
        app:layout_constraintTop_toBottomOf="@+id/hasContent"/>

</androidx.constraintlayout.widget.ConstraintLayout>