<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TipsActivity">
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.flyco.tablayout.SegmentTabLayout
                    android:id="@+id/tab"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/growAgeUndLine"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:tl_textsize="13sp"
                    app:tl_textSelectColor="#ffffffff"
                    app:tl_textUnselectColor="#666666"
                    app:tl_indicator_anim_enable="true"
                    app:tl_indicator_bounce_enable="false"
                    app:tl_indicator_color="#FF8E99"
                    app:tl_tab_padding="22dp"/>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <CheckBox
                            android:id="@+id/leftCheck"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/selector_tools_check_backg"
                            android:text="左"
                            android:textColor="@drawable/selector_tools_text_color"
                            android:gravity="center"
                            android:button="@null"/>
                        <CheckBox
                            android:layout_marginTop="20dp"
                            android:id="@+id/leftPlayCheck"
                            android:enabled="false"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/selector_tools_check_backg_play"
                            android:button="@null"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/leftHandTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#9596A4"
                            android:textSize="13sp"
                            />
                        <Chronometer
                            android:layout_marginTop="10dp"
                            android:id="@+id/leftPlayTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#9596A4"
                            android:textSize="13sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <CheckBox
                            android:id="@+id/rightCheck"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/selector_tools_check_backg"
                            android:text="右"
                            android:textColor="@drawable/selector_tools_text_color"
                            android:gravity="center"
                            android:button="@null"/>
                        <CheckBox
                            android:layout_marginTop="20dp"
                            android:id="@+id/rightPlayCheck"
                            android:layout_width="22dp"
                            android:enabled="false"
                            android:layout_height="22dp"
                            android:background="@drawable/selector_tools_check_backg_play"
                            android:button="@null"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/rightHandTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#9596A4"
                            android:textSize="13sp"
                            />
                        <Chronometer
                            android:layout_marginTop="10dp"
                            android:id="@+id/rightPlayTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#9596A4"
                            android:textSize="13sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/noautoLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="喂养时间"
                        android:textStyle="bold"
                        android:textColor="#ff222222"
                        android:textSize="15sp"
                        />
                    <FrameLayout
                        android:id="@+id/timeFragment"
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="持续时间"
                        android:textStyle="bold"
                        android:textColor="#ff222222"
                        android:textSize="15sp"
                        />
                    <FrameLayout
                        android:id="@+id/durFragment"
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textStyle="bold"
                    android:textColor="#ff222222"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/backUP"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:minHeight="60dp"
                    android:background="@drawable/shape_tools_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="写点什么吧…"
                    android:textColorHint="#ff9596a4"
                    android:textColor="#444444"
                    android:textSize="13sp"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>