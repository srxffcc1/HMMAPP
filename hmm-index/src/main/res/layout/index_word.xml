<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <com.healthy.library.widget.CornerImageView
        android:id="@+id/showtipImage"
        android:layout_width="47dp"
        android:layout_height="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_back_close"
        app:corner_radius="5dp"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/showBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="showtip,showtipImage"/>
    <TextView
        android:id="@+id/showtip"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_index_word"
        android:text="提醒"
        android:textColor="#ff815c35"
        android:textSize="10sp"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/showBarrier"
        android:text="亲爱的宝妈，待产包可以开始准备起来了～"
        android:textColor="#ff444444"
        android:textSize="14sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>