<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TipsActivity">
    <TextView
        android:id="@+id/endTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="@+id/endImg"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="23dp"
        android:text=""
        android:hint="请选择"
        android:textColorHint="#FF8E99"
        android:textColor="#ff763749"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/endImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="23dp"
        android:layout_height="20dp"
        android:src="@drawable/tools_arraw_down"/>
</androidx.constraintlayout.widget.ConstraintLayout>