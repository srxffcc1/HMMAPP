<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="15dp"
    android:paddingTop="24dp"
    tools:ignore="MissingDefaultResource">

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食谱推荐"
        android:textStyle="bold"
        android:textColor="#ff222222"
        android:textSize="17sp"
        />
    <com.healthy.library.widget.ImageTextView
        android:id="@+id/toolRecipeEffect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功效"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/toolRecipeFood"
        android:textColor="#ff666666"
        app:drawableWidth="9dp"
        app:drawableHeight="6dp"
        app:position="3"
        android:drawablePadding="4dp"
        app:drawable="@drawable/ic_solid_triangle_down_gray"
        android:textSize="15sp"
        />
    <com.healthy.library.widget.ImageTextView
        android:id="@+id/toolRecipeFood"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食材"
        android:textColor="#ff666666"
        app:drawableWidth="9dp"
        app:drawableHeight="6dp"
        app:position="3"
        android:drawablePadding="4dp"
        app:drawable="@drawable/ic_solid_triangle_down_gray"
        android:textSize="15sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>