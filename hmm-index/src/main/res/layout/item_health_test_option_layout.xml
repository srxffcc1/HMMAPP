<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/din_medium"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:text="孩子发热状况"
        android:textColor="#ff333333"
        android:textSize="16sp" />

    <com.healthy.library.widget.StackLabel
        android:id="@+id/stackLabelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:deleteButton="false"
        app:isBold="false"
        app:itemMargin="10dp"
        app:labelBackground="@drawable/shape_health_test_option_unselected"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:paddingHorizontal="20dp"
        app:paddingVertical="5dp"
        app:maxSelectNum="1"
        app:selectMode="true"
        app:minSelectNum="1"
        app:selectBackground="@drawable/shape_health_test_option_selected"
        app:selectTextColor="#FFFFFF"
        app:textColor="#333333"
        app:textSize="13sp" />
</LinearLayout>