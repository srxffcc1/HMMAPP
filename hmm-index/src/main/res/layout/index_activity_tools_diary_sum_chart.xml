<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TipsActivity">

    <com.healthy.library.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_marginTop="@dimen/status_2020"
        app:bg_color="@color/colorTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_show_submit="false"
        app:submit_color="#FF6266"
        app:submit="完成"
        app:layout_constraintTop_toTopOf="parent"
        app:show_moss="true"
        app:title="喂养" />

    <com.flyco.tablayout.CommonTabLayout
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        app:tl_indicator_corner_radius="2dp"
        app:tl_indicator_height="3dp"
        app:tl_iconHeight="30dp"
        app:tl_iconWidth="30dp"
        app:tl_indicator_width="30dp"
        app:tl_indicator_color="#FF8E99"
        app:tl_textSelectColor="#FF8E99"
        app:tl_textUnselectColor="#444444"
        app:tl_textsize="14sp"
        app:tl_iconMargin="9dp"
        app:tl_textBold="SELECT"/>
    <TextView
        android:id="@+id/tlDiv"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/tl"
        android:background="#F5F5F9">
    </TextView>
    <FrameLayout
        android:id="@+id/vp"
        app:layout_constraintTop_toBottomOf="@id/tlDiv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>