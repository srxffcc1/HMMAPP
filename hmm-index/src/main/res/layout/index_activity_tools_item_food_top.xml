<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/hasContent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bgImg"
            android:layout_width="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/tools_food_bgr"
            app:layout_constraintTop_toTopOf="@id/tools_bgLfet"
            app:layout_constraintBottom_toBottomOf="@id/tools_bgLfet">

        </ImageView>
        <androidx.legacy.widget.Space
            android:id="@+id/imgSpace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="19dp"
            app:layout_constraintLeft_toRightOf="@id/bgImg"
            app:layout_constraintBottom_toTopOf="@id/bgImg"
            />
        <androidx.legacy.widget.Space
            android:id="@+id/imgSpace2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/bgImg"
            app:layout_constraintBottom_toTopOf="@id/bgImg"
            />
        <ImageView
            android:id="@+id/floatImg1"
            android:layout_width="130dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="503:405"
            app:layout_constraintRight_toRightOf="@id/imgSpace2"
            app:layout_constraintTop_toTopOf="@id/imgSpace2"
            android:src="@drawable/tools_food_bgz">

        </ImageView>
        <ImageView
            android:id="@+id/floatImg2"
            android:layout_width="117dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="390:393"
            app:layout_constraintRight_toRightOf="@id/imgSpace"
            app:layout_constraintTop_toTopOf="@id/imgSpace"
            android:src="@drawable/tools_food_bgrr">

        </ImageView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/tools_bgLfet"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/bgImg"
            app:layout_constraintRight_toLeftOf="@id/floatImg2"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:id="@+id/tools_food_titleLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/shape_tools_food_r"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饮食建议"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tools_food_title_div"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="孕2周"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="19dp"
                android:id="@+id/tools_food_key"
                app:layout_constraintTop_toBottomOf="@id/tools_food_titleLL"
                app:layout_constraintLeft_toLeftOf="@id/tools_food_titleLL"
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关键词："
                android:textColor="#ff444444"
                android:textSize="15sp"
                />
            <TextView

                android:id="@+id/tools_food_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tools_food_key"
                app:layout_constraintTop_toTopOf="@id/tools_food_key"
                app:layout_constraintBottom_toBottomOf="@id/tools_food_key"
                android:text=""
                android:textColor="#ffff6266"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tool_food_value2"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="@id/tools_food_key"
                app:layout_constraintTop_toBottomOf="@id/tools_food_key"
                android:layout_width="0dp"
                android:lines="3"
                android:ellipsize="end"
                android:paddingBottom="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff222222"
                android:textSize="14sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.healthy.library.widget.ImageTextView
            android:id="@+id/toolSeeAll"
            app:layout_constraintRight_toRightOf="@id/bgImg"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_tools_food_rr"
            app:layout_constraintBottom_toBottomOf="@id/bgImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部"
            android:paddingLeft="9dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingRight="9dp"
            app:position="3"
            app:drawableHeight="8dp"
            app:drawableWidth="8dp"
            android:gravity="center"
            app:drawable="@drawable/tools_r_more"
            android:textColor="#ffff6266"
            android:textSize="12sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>