<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1"
    tools:layout_width="wrap_content">

    <com.healthy.library.widget.CornerImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:corner_radius="12sp"
        android:src="@drawable/tx06" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_video_flag"
        android:layout_width="55dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-8dp"
        android:src="@drawable/icon_index_live" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_avatar"
        android:layout_alignLeft="@id/iv_avatar"
        android:layout_alignRight="@id/iv_avatar"
        android:layout_marginTop="8dp"
        android:text="直播间下单享优惠～"
        android:textColor="@color/color_333333"
        android:textSize="12sp" />


</RelativeLayout>