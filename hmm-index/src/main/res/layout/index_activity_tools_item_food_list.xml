<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hasContent"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.healthy.library.widget.CornerImageView
            android:id="@+id/tools_food_img"
            app:layout_constraintTop_toTopOf="@id/tools_food_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tools_food_see"
            android:layout_width="107dp"
            android:layout_height="80dp"
            app:corner_radius="6dp"
            android:src="@drawable/video_back_head2"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@id/tools_food_img"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tools_food_title"
            android:maxEms="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff222222"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tools_food_tip"
            app:layout_constraintLeft_toRightOf="@id/tools_food_title"
            app:layout_constraintTop_toTopOf="@id/tools_food_title"
            app:layout_constraintBottom_toBottomOf="@id/tools_food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【本地菜】"
            android:layout_marginLeft="5dp"
            android:textColor="#ffff6266"
            android:textSize="13sp"
            />
        <TextView
            app:layout_constraintLeft_toLeftOf="@id/tools_food_title"
            app:layout_constraintTop_toBottomOf="@id/tools_food_title"
            android:id="@+id/tools_food_content"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:textColor="#ff444444"
            android:textSize="13sp"
            />
        <com.healthy.library.widget.ImageTextView
            android:id="@+id/tools_food_see"
            android:drawablePadding="8dp"
            app:layout_constraintLeft_toLeftOf="@id/tools_food_title"
            app:layout_constraintTop_toBottomOf="@id/tools_food_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26492浏览量"
            android:layout_marginTop="10dp"
            android:textColor="#ff666666"
            android:textSize="12sp"
            app:drawableWidth="16dp"
            app:drawableHeight="11dp"
            app:drawable="@drawable/tools_see_count"
            />

        <TextView
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="2px"
            app:layout_constraintTop_toBottomOf="@id/tools_food_img"
            android:layout_marginTop="20dp"
            android:background="#ECECEC"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noMsgCon"
        android:layout_width="match_parent"
        android:padding="50dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/readlView">
        <ImageView
            android:id="@+id/noMsg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="115dp"
            android:layout_height="89dp"
            android:src="@drawable/no_message"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/noMsg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无食谱内容"
            android:layout_marginTop="30dp"
            android:textColor="#ff666666"
            android:textSize="14sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>