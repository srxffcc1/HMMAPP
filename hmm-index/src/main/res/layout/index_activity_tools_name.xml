<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TipsActivity">

    <com.healthy.library.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_marginTop="@dimen/status_2020"
        app:bg_color="@color/colorTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_show_submit_image="true"
        app:submit_img_src="@drawable/index_ic_share"
        app:layout_constraintTop_toTopOf="parent"
        app:show_moss="true"
        app:title="宝宝起名" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.healthy.library.widget.CornerImageView
            android:id="@+id/tools_bg_umg"
            android:layout_width="0dp"
            app:corner_radius="8dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/tools_bbqm_bg"
            app:layout_constraintDimensionRatio="700:1170"
            app:layout_constraintRight_toRightOf="parent">

        </com.healthy.library.widget.CornerImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/tools_bg_umg"
            app:layout_constraintRight_toRightOf="@id/tools_bg_umg"
            app:layout_constraintTop_toTopOf="@id/tools_bg_umg"
            app:layout_constraintBottom_toBottomOf="@id/tools_bg_umg">
            <LinearLayout
                android:clickable="true"
                android:onClick="passTOA"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="317">
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:onClick="passTOB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="217">
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:onClick="passTOC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="217">
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:onClick="passTOD"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="212">
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:onClick="passTOE"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="208">
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>