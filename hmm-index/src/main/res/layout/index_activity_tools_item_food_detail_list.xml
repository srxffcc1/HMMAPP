<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hasContent"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.healthy.library.widget.CornerImageView
            android:id="@+id/avatarIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_avatar_default"
            app:is_circle="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginLeft="11dp"
            android:layout_marginTop="2dp"
            android:id="@+id/avatarName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/avatarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不吃饭的感情达人"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
        <com.healthy.library.widget.ExpandTextView
            android:id="@+id/tv_comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/avatarName"
            app:layout_constraintTop_toBottomOf="@id/avatarName"
            tools:text="天呐，我好羡慕楼主，接好孕！" />
        <TextView
            android:id="@+id/recoverpagecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:textColor="#ffcd9643"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_comment_content"
            />
        <TextView
            android:id="@+id/time"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/recoverpagecontent"
            app:layout_constraintTop_toBottomOf="@id/recoverpagecontent"
            app:layout_constraintEnd_toStartOf="@id/like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2020.05.09 14:32:16"
            android:textColor="#ff666666"
            android:textSize="14sp"
            />
        <com.healthy.library.widget.ImageTextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text=""
            android:minEms="2"
            app:position="1"
            app:drawableHeight="15dp"
            app:drawableWidth="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:drawable="@drawable/ic_like"
            app:layout_constraintRight_toLeftOf="@id/discuss"
            app:layout_constraintBottom_toBottomOf="@id/time"
            app:layout_constraintTop_toTopOf="@id/time"/>
        <com.healthy.library.widget.ImageTextView
            android:id="@+id/discuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text=""
            app:position="1"
            android:minEms="2"
            app:drawableHeight="15dp"
            app:drawableWidth="15dp"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:drawable="@drawable/ic_discuss"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/time"
            app:layout_constraintTop_toTopOf="@id/time"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_review"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/time"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_review_detail"
            app:layout_constraintTop_toBottomOf="@id/time"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_review"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </LinearLayout>
            <TextView
                android:id="@+id/recoverpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展开剩余回复"
                android:layout_marginTop="5dp"
                android:textColor="#ffcd9643"
                android:textSize="11sp"
                app:layout_constraintTop_toBottomOf="@+id/ll_review"
                app:layout_constraintLeft_toLeftOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noMsgCon"
        android:layout_width="match_parent"
        android:padding="50dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/readlView">
        <ImageView
            android:id="@+id/noMsg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="115dp"
            android:layout_height="89dp"
            android:src="@drawable/no_message"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/noMsg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无评论内容"
            android:layout_marginTop="30dp"
            android:textColor="#ff666666"
            android:textSize="14sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>