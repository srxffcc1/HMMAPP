<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    tools:ignore="SpUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hasContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_message_tip"
            android:orientation="vertical"
            android:paddingTop="18dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                tools:text="母婴人群疫情防护知识宣传（第二讲）"
                android:textColor="#ff222222"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/videoContent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="主讲人：苏州附一院妇产科主任医师、婴幼儿护理专家、儿童心理咨询专家、婴幼儿护理专家"
                android:textColor="#222222"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/videoMan"
                app:layout_constraintTop_toTopOf="@id/videoReviewButton"
                app:layout_constraintBottom_toBottomOf="@id/videoReviewButton"
                app:layout_constraintRight_toLeftOf="@id/videoReviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3451人已观看"
                android:layout_marginRight="7dp"
                android:textColor="#ff666666"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/videoTime"
                app:layout_constraintTop_toTopOf="@id/videoReviewButton"
                app:layout_constraintBottom_toBottomOf="@id/videoReviewButton"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2019-12-18 17:06:32"
                android:textColor="#ff666666"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/videoReviewButton"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/videoContent"
                android:background="@drawable/shape_onlinev_bt"
                android:paddingRight="9dp"
                android:paddingLeft="9dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观看回放"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>