<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="5dp"
    android:id="@+id/parent_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="30dp"
        android:layout_marginTop="15dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.widget.Space
        android:id="@+id/space"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="@id/iv_category"
        app:layout_constraintBottom_toBottomOf="@id/iv_category"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/hotTip"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/space"
        app:layout_constraintBottom_toBottomOf="@id/space"
        android:background="@drawable/shape_radio_tools_type_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hot"
        android:textSize="8sp"
        android:textColor="#FFF"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"/>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#ff666666"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/iv_category"
        tools:text="亲子摄影" />
</androidx.constraintlayout.widget.ConstraintLayout>
