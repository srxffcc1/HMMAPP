<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/shape_item_faq"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:paddingBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.healthy.library.widget.RoundedImageView
            android:id="@+id/goodsImg_goods4"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_1_1_default2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_top_left="8dp"
            app:riv_corner_radius_top_right="8dp" />

        <TextView
            android:id="@+id/tagText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_mall_goods_ol_tagbgbig"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/goodsImg_goods4"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="新品" />

        <TextView
            android:id="@+id/goodsTitle_goods4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#ff222222"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goodsImg_goods4"
            tools:text="美素佳儿婴幼儿配方奶粉1段800g" />

        <TextView
            android:id="@+id/goodSpace_goods4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="粉色 100cm"
            android:textColor="#ff868799"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/goodsTitle_goods4"
            app:layout_constraintTop_toBottomOf="@+id/goodsTitle_goods4" />

        <TextView
            android:id="@+id/mall_goods_moneyflag_goods4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:text="¥"
            android:textColor="#FA3C5A"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/mall_goods_moneyvalue_goods4"
            app:layout_constraintLeft_toLeftOf="@id/goodsTitle_goods4" />

        <TextView
            android:id="@+id/mall_goods_moneyvalue_goods4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            tools:text="18.8"
            android:textColor="#FA3C5A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/mall_goods_moneyflag_goods4"
            app:layout_constraintTop_toBottomOf="@id/goodSpace_goods4" />

        <TextView
            android:id="@+id/mall_goods_moneyvalue_org_goods4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:textColor="#ff868799"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/mall_goods_moneyvalue_goods4"
            app:layout_constraintLeft_toRightOf="@+id/mall_goods_moneyvalue_goods4"
            app:layout_constraintTop_toTopOf="@id/mall_goods_moneyvalue_goods4"
            tools:text="¥208" />

        <TextView
            android:id="@+id/tehui_goods4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/act_red_bg"
            android:includeFontPadding="false"
            android:text="特惠价"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/mall_goods_moneyvalue_goods4"
            app:layout_constraintLeft_toRightOf="@+id/mall_goods_moneyvalue_goods4"
            app:layout_constraintTop_toTopOf="@id/mall_goods_moneyvalue_goods4" />

        <com.healthy.library.widget.AutoClickImageView
            android:id="@+id/passbasket_goods4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/basket_red"
            app:layout_constraintBottom_toBottomOf="@id/mall_goods_moneyvalue_goods4"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintTop_toBottomOf="@+id/passbasket_goods4" />

        <LinearLayout
            android:id="@+id/vipGoldP"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/mall_goods_moneyflag_goods4"
            app:layout_constraintTop_toBottomOf="@id/mall_goods_moneyvalue_goods4">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:src="@drawable/vip_gold_left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vip_gold_right"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <TextView
                    android:id="@+id/cardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="PLUS"
                    android:textColor="#ff303037"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/cardPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="¥0"
                    android:textColor="#ff303037"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
