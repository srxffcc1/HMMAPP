<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#000"
    tools:ignore="Orientation">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/hasCouponLL"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_mall_goods_ol_vid_float"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="优惠券"
                android:textColor="#ff222222"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="已选1张"
                android:visibility="gone"
                android:id="@+id/couponSelectCount"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/shape_mall_goods_ol_vid_float_pink"
                android:textColor="#fff00028"
                android:textSize="11sp"
                />
            <com.healthy.library.widget.ImageTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:id="@+id/couponMore"
                app:drawable="@drawable/ic_more_pin"
                app:position="3"
                app:drawableHeight="15dp"
                app:drawableWidth="8dp"
                android:drawablePadding="4dp"
                android:textColor="#ff868799"
                android:textSize="13sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/hasDiscountLL"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_mall_goods_ol_vid_float"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/hasCouponLL">

        <LinearLayout
            android:id="@+id/detalAllLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商品总额"
                android:textColor="#ff222222"
                android:textSize="14sp" />

            <TextView

                android:id="@+id/detalAllLLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff222222"
                android:textSize="15sp"
                tools:text="¥598.00" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/detalTranLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="运费"
                android:textColor="#ff222222"
                android:textSize="13sp" />

            <TextView

                android:id="@+id/detalTranLLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff02846"
                android:textSize="13sp"
                tools:text="¥598.00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detalDisLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立减"
                android:textColor="#ff222222"
                android:textSize="13sp" />
            <com.healthy.library.widget.AutoClickImageView
                android:layout_width="13dp"
                android:visibility="gone"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tools_misc"/>

            <TextView

                android:id="@+id/detalDisLLV"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff02846"
                android:textSize="13sp"
                tools:text="¥0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detalCouponLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="优惠券"
                android:textColor="#ff222222"
                android:textSize="13sp" />

            <TextView

                android:id="@+id/detalCouponLLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff02846"
                android:textSize="13sp"
                tools:text="¥598.00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pointLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="积分"
                android:textColor="#ff222222"
                android:textSize="13sp" />

            <TextView

                android:id="@+id/pointLLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff02846"
                android:textSize="13sp"
                tools:text="¥598.00" />
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/hasDiscountLL"
        android:layout_height="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>