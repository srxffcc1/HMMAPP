<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/checkOk"
        android:layout_marginLeft="12dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/pickshopok">

    </ImageView>

    <ImageView
        android:id="@+id/iv_branch_shop_dial"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/mall_ic_branch_shop_dial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv_shop_nameLL"
        android:layout_width="0dp"
        android:layout_marginStart="7dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkOk"
        app:layout_constraintEnd_toStartOf="@id/iv_branch_shop_dial">
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#ff222222"
            android:textSize="14sp"
            android:layout_weight="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/locTip"
            app:layout_constraintTop_toTopOf="parent"
            android:text="婷美摩力产4444444444444444444444444444444444444444"/>
        <TextView
            android:id="@+id/locTip"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:paddingBottom="1dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:background="@drawable/shape_mall_goods_ol_vid_green_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离我最近"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_shop_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ff29bda9"
            android:textSize="10sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/tv_shop_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxEms="20"
        android:ellipsize="end"
        android:layout_marginRight="19dp"
        android:lines="1"
        android:textColor="#ff9596a4"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_shop_nameLL"
        app:layout_constraintEnd_toStartOf="@id/iv_branch_shop_dial"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_nameLL"
        android:text="高新区狮山区75号中信银行后门峰汇大厦10…"/>

    <ImageView
        android:id="@+id/iv_address"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_sub_left_loc"
        app:layout_constraintStart_toStartOf="@id/tv_shop_address"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_address"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_address"
        app:layout_constraintStart_toEndOf="@id/iv_address"
        app:layout_constraintTop_toTopOf="@id/iv_address"
        android:text="1.2km"/>
    <TextView
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_distance"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D5DBE4"></TextView>

