<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规则"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#ff222222"
            android:textSize="17sp"
            />
        <ImageView
            android:id="@+id/close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dialog_close"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/close"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toStoreTranLL"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/toStoreTranTitleLeft"
                    android:layout_width="16dp"
                    android:visibility="gone"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toTopOf="@id/toStoreTranTitle"
                    app:layout_constraintBottom_toBottomOf="@id/toStoreTranTitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/supportleff"/>
                <TextView
                    android:id="@+id/toStoreTranTitle"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/toStoreTranTitleLeft"
                    android:text="支持到店自提"
                    android:layout_marginLeft="8dp"
                    android:textColor="#ff222222"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/toStoreTranContent"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/toStoreTranTitle"
                    android:layout_width="0dp"
                    android:minHeight="200dp"
                    android:lineSpacingMultiplier="1.5"
                    app:layout_constraintLeft_toLeftOf="@id/toStoreTranTitle"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="wrap_content"
                    tools:text="可选择实体门店，到店自提"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/under"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/submitBtn"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="30dp"
                    android:paddingBottom="12dp"
                    android:gravity="center"

                    android:background="@drawable/shape_mall_goods_ol_vid_red_btn_big"
                    android:text="完成"
                    android:singleLine="true"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>