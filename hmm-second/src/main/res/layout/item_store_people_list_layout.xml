<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.healthy.library.widget.CornerFitCenterImageView
            android:id="@+id/peopleImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_1_1_default"
            app:corner_radius="8dp"
            app:is_circle="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/peopleLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_new_store_detial_people_lable"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            android:text="高级营养师"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/peopleImg"
            app:layout_constraintTop_toTopOf="@+id/peopleImg" />

        <TextView
            android:id="@+id/peopleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="陈秋橘"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/peopleImg"
            app:layout_constraintRight_toRightOf="@+id/peopleImg"
            app:layout_constraintTop_toBottomOf="@+id/peopleImg" />

        <com.example.lib_ShapeView.layout.ShapeConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:shape_radius="2dp"
            app:shape_startColor="#F2D3AF"
            app:shape_endColor="#E4B890"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peopleName">

            <ImageView
                android:id="@+id/technician_icon"
                android:layout_width="21dp"
                android:layout_height="16dp"
                android:src="@drawable/technician_icon"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/peopleTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:paddingRight="5dp"
                android:text="10年调理师"
                android:textColor="#ff000000"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/technician_icon"
                app:layout_constraintTop_toTopOf="parent" />
        </com.example.lib_ShapeView.layout.ShapeConstraintLayout>

        <TextView
            android:id="@+id/peopleYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8年调理经验"
            android:textColor="#ff999999"
            android:visibility="gone"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/peopleName"
            app:layout_constraintTop_toBottomOf="@+id/peopleName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>