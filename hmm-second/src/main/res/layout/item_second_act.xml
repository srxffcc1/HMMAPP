<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:paddingBottom="8dp"
    android:background="@drawable/shape_act_second_yellow"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:background="@drawable/shape_index_top_grid_bg"
        android:layout_height="wrap_content">
        <com.healthy.library.widget.ImageTextView
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@id/actPeople"
            android:layout_marginRight="50dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:id="@+id/shopName"
            tools:text="红黄蓝儿童摄影"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:textColor="#B73A00"
            app:drawable="@drawable/second_store_main_flag"
            app:drawableWidth="16dp"
            app:drawableHeight="16dp"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_second_store_main_pink_bg"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/actPeople"
            app:layout_constraintTop_toTopOf="@id/shopName"
            app:layout_constraintBottom_toBottomOf="@id/shopName"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="302人已抢"
            android:textColor="#ff999999"
            android:textSize="10sp"
            />
        <com.healthy.library.widget.CornerImageView
            android:id="@+id/goodsPic"
            android:layout_width="115dp"
            app:corner_radius="8dp"
            app:layout_constraintLeft_toLeftOf="@id/shopName"
            app:layout_constraintTop_toBottomOf="@id/shopName"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_1_1_default"
            android:layout_height="115dp"/>
        <TextView
            android:id="@+id/goodsName"
            android:layout_width="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/goodsPic"
            app:layout_constraintTop_toTopOf="@id/goodsPic"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="百天周岁照儿童摄影/宝宝写真摄影…"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />
        <LinearLayout
            android:id="@+id/actTimeLL"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/goodsName"
            app:layout_constraintTop_toBottomOf="@id/goodsName"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距结束"
                android:textColor="#FA3C5A"
                android:textSize="10sp"
                />
            <LinearLayout
                android:id="@+id/goodsTimeLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/kickDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:gravity="center"
                    android:background="@drawable/shape_disact_red_small3"
                    tools:text="23"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/kickDayT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:padding="1dp"
                    android:textColor="#FA3C5A"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/kickHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:gravity="center"
                    android:background="@drawable/shape_disact_red_small3"
                    tools:text="23"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#FF2D24"/>
                <TextView
                    android:id="@+id/kickMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:gravity="center"
                    android:background="@drawable/shape_disact_red_small3"
                    tools:text="23"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#FF2D24"/>
                <TextView
                    android:id="@+id/kickSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@drawable/shape_disact_red_small3"
                    tools:text="23"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/actTimeLL"
            app:layout_constraintLeft_toLeftOf="@id/goodsName"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/goodsMoneyBg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/second_act_button_shark"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/goodsMoney"
                android:layout_marginLeft="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="¥399"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/goodsMoneyOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥1399"
                app:layout_constraintTop_toBottomOf="@id/goodsMoney"
                app:layout_constraintLeft_toLeftOf="@id/goodsMoney"
                android:textColor="#FFCCCC"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/goodsActRule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/goodsMoney"
                app:layout_constraintBottom_toBottomOf="@id/goodsMoneyOld"
                app:layout_constraintLeft_toRightOf="@id/goodsMoney"
                android:layout_marginLeft="40dp"
                android:text="8人团"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/goodsActRuleTmp"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/goodsMoney"
                app:layout_constraintBottom_toBottomOf="@id/goodsMoneyOld"
                app:layout_constraintLeft_toRightOf="@id/goodsActRule"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>