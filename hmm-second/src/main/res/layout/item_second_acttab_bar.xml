<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/actsPost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/second_act_top_post"
        app:layout_constraintDimensionRatio="750:442"/>
    <RadioGroup
        android:id="@+id/actsRadioGroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="9dp"
        app:layout_constraintTop_toBottomOf="@id/actsPost"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/checkA"
            android:layout_width="0dp"
            android:layout_marginHorizontal="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_second_act_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="秒抢\n限时限量"
            android:textColor="#A04300"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/checkB"
            android:layout_width="0dp"
            android:layout_marginHorizontal="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_second_act_bg"
            android:button="@null"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="拼团\n拼着买划算"
            android:textColor="#A04300"
            android:textSize="10sp" />
        <RadioButton
            android:id="@+id/checkC"
            android:layout_width="0dp"
            android:layout_marginHorizontal="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_second_act_bg"
            android:button="@null"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="砍价\n砍至低价"
            android:textColor="#A04300"
            android:textSize="10sp" />
    </RadioGroup>
    <androidx.legacy.widget.Space
        android:id="@+id/actsRadioSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/actsRadioGroup"/>
    <LinearLayout
        android:id="@+id/actsRadioSpaceBottom"
        app:layout_constraintBottom_toBottomOf="@id/actsRadioSpace"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_act_second_yellow_top"/>


</androidx.constraintlayout.widget.ConstraintLayout>