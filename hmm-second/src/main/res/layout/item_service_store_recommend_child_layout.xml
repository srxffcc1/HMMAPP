<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.healthy.library.widget.CornerImageView
        android:id="@+id/goodsImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:src="@drawable/tx09"
        app:corner_radius="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goodsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:text="精油开背去湿排毒体验卡3次"
        android:textSize="12dp"
        android:textColor="@color/color_333333"
        android:lines="2"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/goodsImg"
        app:layout_constraintLeft_toLeftOf="@id/goodsImg"
        app:layout_constraintRight_toRightOf="@id/goodsImg"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="14dp"
        android:id="@+id/tv_price_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textColor="@color/color_fa3c5a"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/goodsName"
        app:layout_constraintLeft_toLeftOf="@id/goodsName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_goodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="189.9"
        android:textColor="@color/color_fa3c5a"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/tv_pinMoneySingle"
        app:layout_constraintBottom_toBottomOf="@id/tv_price_left"
        app:layout_constraintLeft_toRightOf="@id/tv_price_left" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pinMoneySingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:text="¥1989"
        android:textColor="@color/color_999999"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_goodsPrice"
        app:layout_constraintLeft_toRightOf="@id/tv_goodsPrice"
        app:layout_constraintTop_toTopOf="@id/tv_goodsPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>