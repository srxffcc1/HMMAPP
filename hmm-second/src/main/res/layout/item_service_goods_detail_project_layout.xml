<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_projectName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="·脸部补水小气泡一次"
        android:textColor="@color/color_333333"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_projectPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_projectPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥78.9"
        android:textColor="@color/color_333333"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_projectDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="面部芦荟灌肤补水"
        android:textColor="@color/color_666666"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_projectName"
        app:layout_constraintTop_toBottomOf="@id/tv_projectName" />

</androidx.constraintlayout.widget.ConstraintLayout>