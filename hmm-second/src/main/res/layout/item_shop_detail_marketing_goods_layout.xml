<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical">


    <com.healthy.library.widget.CornerImageView
        android:id="@+id/goodsImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_1_1_default"
        app:corner_radius="11dp"
        app:is_circle="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goodsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="婷美摩力21产后恢复骨盆聚合调理体验卡3次"
        android:textColor="#ff222222"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/goodsImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/goodsImg" />

    <TextView
        android:id="@+id/goodsMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:textColor="#FA3C5A"
        android:textSize="18sp"
        android:fontFamily="@font/din_bold"
        app:layout_constraintLeft_toLeftOf="@id/goodsTitle"
        app:layout_constraintTop_toBottomOf="@id/actTimeLL"
        tools:text="¥19.9" />

    <TextView
        android:id="@+id/pinNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:paddingLeft="10dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:fontFamily="@font/din_bold"
        app:layout_constraintBottom_toBottomOf="@id/goodsMoney"
        app:layout_constraintLeft_toRightOf="@id/goodsMoney"
        tools:text="0" />

    <com.example.lib_ShapeView.view.ShapeTextView
        android:id="@+id/marketingTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:text="该商品正在参与拼团"
        android:textColor="#FF6906"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@id/goodsTitle"
        app:layout_constraintTop_toBottomOf="@id/goodsTitle"
        app:shape_radius="10dp"
        app:shape_solidColor="#FFF1EC" />

    <LinearLayout
        android:id="@+id/actTimeLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/goodsTitle"
        app:layout_constraintTop_toBottomOf="@id/marketingTag">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距结束"
            android:textColor="#FA3C5A"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/goodsTimeLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kickDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_disact_red_small3"
                android:fontFamily="@font/din_bold"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                tools:text="00" />

            <TextView
                android:id="@+id/kickDayTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="天"
                android:textColor="#FF2D24"
                android:textSize="10sp"
                android:fontFamily="@font/din_bold"/>
            <TextView
                android:id="@+id/kickHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_disact_red_small3"
                android:fontFamily="@font/din_bold"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                tools:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text=":"
                android:textColor="#FF2D24"
                android:textSize="10sp"
                android:fontFamily="@font/din_bold" />

            <TextView
                android:id="@+id/kickMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_disact_red_small3"
                android:fontFamily="@font/din_bold"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                tools:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text=":"
                android:textColor="#FF2D24"
                android:textSize="10sp"
                android:fontFamily="@font/din_bold"/>

            <TextView
                android:id="@+id/kickSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_disact_red_small3"
                android:fontFamily="@font/din_bold"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                tools:text="00" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/salesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x 1"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/marketingTag"
        app:layout_constraintRight_toRightOf="parent" />

    <com.example.lib_ShapeView.view.ShapeTextView
        android:id="@+id/subBtn"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="去抢购"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shape_endColor="#806FFF"
        app:shape_radius="15dp"
        app:shape_startColor="#705DFF" />

</androidx.constraintlayout.widget.ConstraintLayout>