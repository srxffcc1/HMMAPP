<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="@drawable/shape_index_top_grid_bg"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="4dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_height="wrap_content">
        <com.healthy.library.widget.ImageTextView
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:id="@+id/shopName"
            android:text="红黄蓝儿童摄影"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:textColor="#B73A00"
            app:drawable="@drawable/second_store_main_flag"
            app:drawableWidth="16dp"
            app:drawableHeight="16dp"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_second_store_main_pink_bg"
            android:textSize="12sp"/>
        <com.healthy.library.widget.CornerImageView
            android:id="@+id/goodsPic"
            android:layout_width="40dp"
            app:corner_radius="8dp"
            app:layout_constraintLeft_toLeftOf="@id/shopName"
            app:layout_constraintTop_toBottomOf="@id/shopName"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_1_1_default"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/goodsName"
            android:layout_width="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/goodsPic"
            app:layout_constraintTop_toTopOf="@id/goodsPic"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="百天周岁照儿童摄影/宝宝写真摄影…"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/goodsMoneyActFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:visibility="gone"
            android:text="可砍至"
            android:layout_marginBottom="2dp"
            android:textColor="#fffa3c5a"
            app:layout_constraintBottom_toBottomOf="@id/goodsMoney"
            app:layout_constraintLeft_toLeftOf="@id/goodsPic"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/goodsMoneyFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/goodsMoney"
            app:layout_constraintLeft_toRightOf="@id/goodsMoneyActFlag"
            android:text="¥"
            android:layout_marginBottom="1dp"
            android:textColor="#fffa3c5a"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/goodsMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@id/goodsMoneyFlag"
            android:text="399"
            android:textColor="#fffa3c5a"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/goodsPic"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="@id/goodsAct"
            app:layout_constraintRight_toRightOf="@id/goodsAct"
            app:layout_constraintBottom_toBottomOf="@id/goodsAct"
            android:src="@drawable/second_store_act_flag"

            app:layout_constraintTop_toTopOf="@id/goodsAct"/>
        <TextView
            android:id="@+id/goodsAct"
            app:layout_constraintTop_toTopOf="@id/goodsMoney"
            app:layout_constraintBottom_toBottomOf="@id/goodsMoney"
            app:layout_constraintLeft_toRightOf="@id/goodsMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拼团价"
            android:layout_marginLeft="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/goodsMoneyOld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥1399"
            app:layout_constraintTop_toTopOf="@id/goodsMoney"
            app:layout_constraintBottom_toBottomOf="@id/goodsMoney"
            app:layout_constraintRight_toRightOf="@id/goodsName"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
        <LinearLayout
            android:id="@+id/actTimeLL"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/goodsPic"
            app:layout_constraintTop_toBottomOf="@id/goodsMoney"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/goodsTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距结束"
                android:paddingHorizontal="4dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:background="@drawable/shape_time_bdg"
                android:textColor="#FA3C5A"
                android:textSize="9sp"
                />
            <LinearLayout
                android:id="@+id/goodsTimeLL"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/kickHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:gravity="center"
                    android:background="@drawable/shape_disact_red_small3"
                    tools:text="23"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#FF2D24"/>
                <TextView
                    android:id="@+id/kickMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:gravity="center"
                    android:background="@drawable/shape_disact_red_small3"
                    tools:text="23"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#FF2D24"/>
                <TextView
                    android:id="@+id/kickSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@drawable/shape_disact_red_small3"
                    tools:text="23"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/actPeople"
            app:layout_constraintTop_toTopOf="@id/actTimeLL"
            app:layout_constraintBottom_toBottomOf="@id/actTimeLL"
            app:layout_constraintRight_toRightOf="@id/goodsMoneyOld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="302人已抢"
            android:textColor="#ff999999"
            android:textSize="10sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/soldOutImg"
        android:visibility="gone"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/second_soldout"/>

</androidx.constraintlayout.widget.ConstraintLayout>