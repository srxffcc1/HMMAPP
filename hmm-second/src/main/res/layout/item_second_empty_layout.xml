<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="558dp"
    android:paddingBottom="8dp"
    android:background="@drawable/shape_act_second_yellow"
    android:layout_marginHorizontal="10dp">

    <com.example.lib_ShapeView.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shape_topLeftRadius="12dp"
        app:shape_topRightRadius="12dp"
        app:shape_bottomLeftRadius="2dp"
        app:shape_bottomRightRadius="2dp"
        app:shape_solidColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/status_empty_normal"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无商品"
            android:textSize="15dp"
            android:textColor="#9596A4"
            app:layout_constraintTop_toBottomOf="@id/iv_empty"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </com.example.lib_ShapeView.layout.ShapeConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
