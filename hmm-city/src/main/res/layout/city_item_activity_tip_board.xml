<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="17dp"
    android:paddingRight="15dp"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage">

    <TextView
        android:id="@+id/num"
        android:fontFamily="@font/din_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="01"
        android:textColor="#ffff544f"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/tip"
        android:fontFamily="@font/din_bold"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="婆婆要不要带孩"
        app:layout_constraintLeft_toRightOf="@id/num"
        app:layout_constraintTop_toTopOf="@id/num"
        android:textColor="#ff222222"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tipCount"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10896篇帖子"
        android:textColor="#ff666666"
        app:layout_constraintTop_toBottomOf="@id/tip"
        app:layout_constraintLeft_toLeftOf="@id/tip"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/manCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29083人参与"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toTopOf="@id/tipCount"
        app:layout_constraintBottom_toBottomOf="@id/tipCount"
        app:layout_constraintLeft_toRightOf="@id/tipCount"
        android:textColor="#ff666666"
        android:textSize="12sp"
        />
    <ImageView
        android:id="@+id/isHot"
        android:layout_marginLeft="10dp"
        android:src="@drawable/mall_ic_sales_num"
        app:layout_constraintLeft_toRightOf="@id/tip"
        app:layout_constraintTop_toTopOf="@id/tip"
        app:layout_constraintBottom_toBottomOf="@id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>

