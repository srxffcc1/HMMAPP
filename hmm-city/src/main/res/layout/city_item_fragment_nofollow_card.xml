<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@drawable/shape_city_fans"
        android:layout_height="wrap_content">
        <com.healthy.library.widget.CornerImageView
            android:id="@+id/ivHeader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_avatar_default"
            app:is_circle="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/name"
            android:minLines="1"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="快乐柠檬草"
            android:maxEms="5"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:textColor="#ff444444"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivHeader"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="3dp"
            android:minLines="1"
            android:singleLine="true"
            android:paddingRight="5dp"
            android:text="宝宝3个月"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:id="@+id/nameandstatus"
            app:layout_constraintTop_toBottomOf="@id/status"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fansCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝15.6k"
                android:minLines="1"
                android:textColor="#ff444444"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/likeCount"
                android:minLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞9.3k"
                android:textColor="#ff444444"
                android:textSize="12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/toFollow"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/nameandstatus"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_city_nofollow_click"
            android:paddingLeft="16dp"
            android:paddingTop="5dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:text="关注"
            android:textColor="#ff29bda9"
            android:textSize="13sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>