<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:background="@drawable/shape_new_order_bg"
    android:layout_marginBottom="10dp"
    android:paddingVertical="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/item_footer_avatar"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/img_1_1_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:src="@drawable/live_player_stop"
        app:layout_constraintBottom_toBottomOf="@id/item_footer_avatar"
        app:layout_constraintLeft_toLeftOf="@id/item_footer_avatar"
        app:layout_constraintRight_toRightOf="@id/item_footer_avatar"
        app:layout_constraintTop_toTopOf="@id/item_footer_avatar" />

    <TextView
        android:id="@+id/item_footer_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:text="无敌小钢炮"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/item_footer_avatar"
        app:layout_constraintTop_toTopOf="@id/item_footer_avatar" />

    <TextView
        android:id="@+id/item_footer_userSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="男"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/item_footer_userName"
        app:layout_constraintTop_toTopOf="@id/item_footer_userName" />

    <TextView
        android:id="@+id/item_footer_Rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="排名：1"
        android:textColor="@color/color_fa405c"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_footer_userSex" />

    <TextView
        android:id="@+id/item_footer_userIdCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="身份证号：320926********5345"
        android:textColor="@color/color_808080"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/item_footer_userName"
        app:layout_constraintTop_toBottomOf="@id/item_footer_userName" />

    <TextView
        android:id="@+id/item_footer_userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式：158****2189"
        android:textColor="@color/color_808080"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/item_footer_userIdCard"
        app:layout_constraintTop_toBottomOf="@id/item_footer_userIdCard" />

    <TextView
        android:id="@+id/item_footer_userAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="联系地址：江苏省苏州市高新区运河路78号"
        android:textColor="@color/color_808080"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/item_footer_userPhone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_footer_userPhone" />


    <TextView
        android:id="@+id/item_footer_userSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="参赛口号：我是一个小小男子汉，我要参加比赛拿大奖，好开心我是一个小小男子汉，我要参加比赛拿大奖，好开心"
        android:textColor="@color/color_333333"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_footer_userAddress" />

    <TextView
        android:id="@+id/item_footer_action"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/select_action_enabled"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingVertical="4dp"
        android:text="投一票"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_footer_userSlogan" />

    <TextView
        android:id="@+id/item_footer_userVoteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="367票"
        android:textColor="@color/color_fa405c"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_footer_action"
        app:layout_constraintRight_toLeftOf="@id/item_footer_action"
        app:layout_constraintTop_toTopOf="@id/item_footer_action" />

</androidx.constraintlayout.widget.ConstraintLayout>