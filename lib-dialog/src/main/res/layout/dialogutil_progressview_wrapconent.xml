<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialogutil_bg_ios_roundcorner_progress"
    android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/body"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                  android:layout_gravity="center"
        android:baselineAligned="false"
                  android:elevation="10dp"
        android:paddingLeft="12dip"
        android:paddingTop="14dip"
        android:paddingRight="12dip"

        android:paddingBottom="14dip">
<!-- style="?android:attr/progressBarStyle"-->
        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:max="10000"
                     android:indeterminateDrawable="@drawable/dialogutil_progressstyleshape"
                     android:indeterminate="true"
                     android:indeterminateDuration="1200" />

     <!--   <com.hss01248.roundprogressbar.RoundProgressBar
            android:id="@+id/pb"
            android:layout_centerInParent="true"
            app:cpb_duration = "1200"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />-->



        <TextView android:id="@+id/loading_msg"
            tools:text="@string/dialogutil_loading"
                  android:textColor="#222222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</FrameLayout>