<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="10dp"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardParent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_disact_list_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goodsLayout"
            android:layout_width="105dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/goodsImg"
                android:layout_width="40dp"
                android:layout_height="56dp"
                android:elevation="2dp"
                android:src="@drawable/img_1_1_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/yellowBg"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:src="@drawable/item_trans_yellow_bg"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/goodsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="宝贝乐奶粉一罐500g 2-4岁一阶段"
            android:textColor="#ff222222"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/goodsLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/goodsTitle"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/goodsTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ff666666"
                android:textSize="11sp"
                tools:text="2020.10.27-2020.11.30" />

            <TextView
                android:id="@+id/goodsButton"
                android:layout_width="59dp"
                android:layout_height="24dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_red_btn"
                android:gravity="center"
                android:text="待领取"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_empty_stock2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/dis_give4"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>