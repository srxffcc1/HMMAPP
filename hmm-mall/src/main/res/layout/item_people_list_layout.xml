<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.healthy.library.widget.CornerFitCenterImageView
            android:id="@+id/peopleImg"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:src="@drawable/img_1_1_default"
            app:corner_radius="8dp"
            app:is_circle="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/peopleLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_new_store_detial_people_lable"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="高级营养师"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/peopleImg"
            app:layout_constraintTop_toTopOf="@+id/peopleImg" />

        <TextView
            android:id="@+id/peopleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="陈秋橘"
            android:textColor="#ff222222"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/peopleImg"
            app:layout_constraintTop_toBottomOf="@+id/peopleImg" />

        <TextView
            android:id="@+id/peopleYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8年调理经验"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/peopleName"
            app:layout_constraintTop_toBottomOf="@+id/peopleName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>