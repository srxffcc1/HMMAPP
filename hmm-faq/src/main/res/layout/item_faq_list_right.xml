<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvAskExperts"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/ivQ"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="@+id/tvQuestions"
        />
    <TextView
        android:id="@+id/tvQuestions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/sp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivQ"
        android:text="宝宝鼻塞不会自己擦鼻涕，宝宝鼻塞不会自己擦鼻涕，宝宝鼻塞不会自己擦鼻涕" />
    <com.healthy.library.widget.CornerImageView
        android:id="@+id/ivHeader"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/img_avatar_default"
        app:is_circle="true"
        app:layout_constraintLeft_toLeftOf="@id/ivQ"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestions" />
    <ImageView
        android:id="@+id/ivBQ"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_expert_hz"
        app:layout_constraintCircle="@+id/ivHeader"
        app:layout_constraintCircleAngle="130"
        app:layout_constraintCircleRadius="28dp" />
    <TextView
        android:id="@+id/tvLookQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_expert_ask"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/dp_15"
        android:text="查看问答详情"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@+id/ivHeader"
        app:layout_constraintBottom_toBottomOf="@id/ivHeader"
        app:layout_constraintLeft_toRightOf="@id/ivHeader"/>
    <TextView
        android:id="@+id/ivName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杨晓琳"
        android:textColor="#ff666666"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/ivHeader"
        app:layout_constraintRight_toRightOf="@id/ivHeader"
        app:layout_constraintTop_toBottomOf="@id/ivHeader"
        />
    <TextView
        android:id="@+id/ivYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7年高级育婴师"
        android:textColor="#ff666666"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/ivName"
        app:layout_constraintTop_toTopOf="@id/ivName"
        app:layout_constraintBottom_toBottomOf="@id/ivName"
        />
    <TextView
        android:id="@+id/ivTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地专家"
        android:layout_marginLeft="10dp"
        android:textColor="#ff815c35"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:gravity="center"
        android:textSize="10sp"
        android:background="@drawable/shape_faq_left_tip"
        app:layout_constraintLeft_toRightOf="@+id/ivYear"
        app:layout_constraintTop_toTopOf="@id/ivYear"
        app:layout_constraintBottom_toBottomOf="@id/ivYear"
        />
    <TextView
        android:id="@+id/ivSee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6052人查看"
        android:textColor="#ff444444"
        android:textSize="11sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivYear"
        app:layout_constraintBottom_toBottomOf="@id/ivYear"
        />
</androidx.constraintlayout.widget.ConstraintLayout>