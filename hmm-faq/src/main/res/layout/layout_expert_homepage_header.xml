<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/faq_expert_cover"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.healthy.library.widget.CornerImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:contentDescription="@string/app_name"
        app:is_circle="true"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        tools:src="@drawable/img_1_1_default"/>

    <ImageView
        android:id="@+id/iv_avatar_level"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_expert_hz"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintCircle="@id/iv_avatar"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="30dp"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar"/>

    <TextView
        android:id="@+id/tv_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_titles"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="刘美丽"/>

    <TextView
        android:id="@+id/tv_titles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_real_name"
        app:layout_constraintTop_toBottomOf="@id/tv_real_name"
        tools:text="12年高级育婴师"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="9dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_advisory_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_medium"
                android:textColor="#ff28d6bd"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/tv_advisory_num_title"
                app:layout_constraintEnd_toEndOf="@id/tv_advisory_num_title"
                app:layout_constraintStart_toStartOf="@id/tv_advisory_num_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="258"/>

            <TextView
                android:id="@+id/tv_advisory_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询人数"
                android:textColor="#ff666666"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@id/tv_response_time_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_advisory_num"/>

            <TextView
                android:id="@+id/tv_response_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_medium"
                android:textColor="#ff28d6bd"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/tv_response_time_title"
                app:layout_constraintEnd_toEndOf="@id/tv_response_time_title"
                app:layout_constraintStart_toStartOf="@id/tv_response_time_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="15min"/>

            <TextView
                android:id="@+id/tv_response_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="响应时长"
                android:textColor="#ff666666"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@id/fres"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_advisory_num_title"
                app:layout_constraintTop_toBottomOf="@id/tv_response_time"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fres"
                android:layout_margin="5dp"
                android:background="@drawable/shape_faq_home_yellow"
                app:layout_constraintTop_toBottomOf="@id/tv_response_time_title"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="wrap_content"
                    android:text="咨询方式"
                    android:textColor="#ff444444"
                    android:textSize="13sp"
                    />
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/consultingFees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图文"
                    android:layout_marginRight="4dp"
                    android:textColor="#ff444444"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/consultingFees"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥19.9"
                    android:textColor="#ffff6266"
                    android:textSize="15sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_good_at_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="擅长领域"
        android:textColor="#ff222222"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toBottomOf="@id/card"/>

    <TextView
        android:id="@+id/tv_good_at"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#ff222222"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toBottomOf="@id/tv_good_at_title"
        tools:text="病理性黄疸、婴幼儿腹泻、小儿感冒咳嗽、病毒性心肌炎、哮喘、不孕不育、病理性黄疸"/>

    <TextView
        android:id="@+id/tv_introduction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="专家简介"
        android:textColor="#ff222222"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toBottomOf="@id/tv_good_at"/>

    <TextView
        android:id="@+id/tv_introduction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#ff222222"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toBottomOf="@id/tv_introduction_title"
        tools:text="病理性黄疸、婴幼儿腹泻、小儿感冒咳嗽、病毒性心肌炎、哮喘、不孕不育、病理性黄疸"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@id/tv_introduction"/>

    <TextView
        android:id="@+id/tv_answer_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="14dp"
        android:text="Ta的回答"
        android:textColor="#ff222222"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"/>

    <TextView
        android:id="@+id/tv_answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="#ff222222"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_answer_count_title"
        app:layout_constraintStart_toEndOf="@id/tv_answer_count_title"
        app:layout_constraintTop_toTopOf="@id/tv_answer_count_title"
        tools:text="(11)"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_answer_count_title,tv_answer_count"/>
</androidx.constraintlayout.widget.ConstraintLayout>