<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/messageIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="44dp"
        android:src="@drawable/ic_back_close"
        android:layout_height="44dp">
    </ImageView>
    <TextView
        android:id="@+id/messageNoCount"
        android:layout_width="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/messageIcon"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_message_countno"
        android:text="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        android:layout_height="10dp"/>
    <TextView
        android:id="@+id/messageCount"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/messageIcon"
        android:background="@drawable/shape_message_count"
        android:text="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/messageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@id/messageIcon"
        app:layout_constraintBottom_toTopOf="@id/messageContent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="#ff444444"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/messageContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingTop="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/messageTitle"
        app:layout_constraintTop_toBottomOf="@id/messageTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="9月16日，您在婷美摩力21产后恢复有一项调复有一项调理复有一项调理复有一项调理"
        android:textColor="#ff9596a4"
        android:textSize="12sp"
        />



    <TextView
        android:id="@+id/messageTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10分钟前"
        android:paddingBottom="9dp"
        android:textColor="#ff9596a4"
        android:textSize="11sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>