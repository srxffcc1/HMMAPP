<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChooseStatusActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/BackIvStyle"
        android:contentDescription="@string/app_name"
        android:onClick="back"/>

    <TextView
        android:id="@+id/tv_choose_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="请选择您的身份"
        android:textColor="@color/colorMajorText"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.healthy.library.widget.ImageTextView
        android:id="@+id/icon_sex_women"
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:layout_marginTop="44dp"
        android:text="女士(妈妈)"
        android:textSize="13sp"
        android:gravity="center"
        app:position="2"
        android:drawablePadding="5dp"
        app:drawable="@drawable/ic_sex_women"
        app:drawableHeight="110dp"
        app:drawableWidth="110dp"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_status_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.healthy.library.widget.ImageTextView
        android:id="@+id/icon_sex_man"
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:layout_marginTop="44dp"
        app:drawableHeight="110dp"
        app:drawableWidth="110dp"
        android:textSize="13sp"
        android:text="男士(爸爸)"
        android:gravity="center"
        app:position="2"
        app:drawable="@drawable/ic_sex_man"
        app:layout_constraintTop_toBottomOf="@id/icon_sex_women"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>