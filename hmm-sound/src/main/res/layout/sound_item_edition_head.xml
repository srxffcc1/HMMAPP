<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="wrap_content">
    <com.healthy.library.widget.CornerImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        app:corner_radius="8dp"
        android:id="@+id/soundEdititonIcon"
        android:layout_height="100dp"
        android:src="@drawable/img_1_1_default"
        />
    <TextView
        android:id="@+id/soundEdititonTitle"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="9dp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@id/soundEdititonIcon"
        app:layout_constraintTop_toTopOf="@id/soundEdititonIcon"
        app:layout_constraintRight_toLeftOf="@id/soundEditCollect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="佟彤中医养护50讲"
        android:fontFamily="@font/din_medium"
        android:textColor="#333333"
        android:textSize="15sp"
        />
    <com.healthy.library.widget.ImageTextView
        android:id="@+id/soundEditCollect"
        app:layout_constraintTop_toTopOf="@id/soundEdititonTitle"
        app:layout_constraintBottom_toBottomOf="@id/soundEdititonTitle"
        app:layout_constraintLeft_toRightOf="@id/soundEdititonTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:text="订阅"
        app:drawable="@drawable/ic_sound_sub_normal"
        app:drawableWidth="6dp"
        app:drawableHeight="6dp"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="#ff815c35"
        android:textSize="11sp"

        android:background="@drawable/shape_sound_sub"/>
    <TextView
        android:id="@+id/soundEdititonCotent"
        android:layout_width="0dp"
        android:singleLine="true"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/soundEdititonTitle"
        app:layout_constraintTop_toBottomOf="@id/soundEdititonTitle"
        android:layout_height="wrap_content"
        tools:text="好故事和爱，都是无价的"
        android:textColor="#ff666666"
        android:textSize="13sp"
        />
    <com.healthy.library.widget.ImageTextView
        android:id="@+id/soundEditionPlays"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/soundEdititonTitle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/soundEdititonCotent"
        android:layout_height="wrap_content"
        android:text="510.2万"
        android:textSize="10sp"
        app:drawableHeight="20dp"
        android:textColor="#555555"
        android:drawablePadding="5dp"
        app:drawableWidth="20dp"
        app:drawable="@drawable/ic_collection_plays"/>

    <TextView
        android:id="@+id/soundEditionFrom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/soundEditionPlays"
        app:layout_constraintBottom_toBottomOf="@id/soundEditionPlays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源: 喜马拉雅APP"
        android:textColor="#ff555555"
        android:textSize="11sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>