<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:paddingLeft="12dp"
    android:paddingTop="15dp"

    android:paddingRight="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/soundEdititonNum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:fontFamily="@font/din_bold"
        android:textColor="#ff9596a4"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/soundEdititonTitle"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/soundEdititonNum"
        app:layout_constraintBottom_toBottomOf="@id/soundEdititonNum"
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="@+id/soundEditionPlay"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="佟彤中医养护50讲"
        android:fontFamily="@font/din_medium"
        android:textColor="#444444"
        android:textSize="15sp"
        />
    <com.healthy.library.widget.ImageTextView
        android:id="@+id/soundEditionPlays"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/soundEdititonTitle"
        app:layout_constraintTop_toBottomOf="@id/soundEdititonTitle"
        android:layout_height="wrap_content"
        tools:text="510.2万"
        android:fontFamily="@font/din_medium"
        android:gravity="center"
        android:textSize="10sp"
        app:drawableHeight="12dp"
        android:drawablePadding="6dp"
        app:drawableWidth="12dp"
        app:drawable="@drawable/ic_sound_detail_l"/>
    <com.healthy.library.widget.ImageTextView
        app:layout_constraintLeft_toRightOf="@id/soundEditionPlays"
        app:layout_constraintTop_toTopOf="@id/soundEditionPlays"
        app:layout_constraintBottom_toBottomOf="@id/soundEditionPlays"
        android:id="@+id/soundEditionBook"
        android:layout_marginLeft="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="33"
        android:gravity="center"
        android:fontFamily="@font/din_medium"
        android:drawablePadding="6dp"
        android:textSize="10sp"
        app:drawableHeight="12dp"
        app:drawableWidth="12dp"
        app:drawable="@drawable/ic_sound_detail_r"/>
    <ImageView
        android:id="@+id/soundEditionPlay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/ic_sound_play"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#D3D7E0"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/soundEditionPlays"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>