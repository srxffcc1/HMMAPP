<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the line -->
    <!-- left 和right是左右边距 -->
    <item
        android:left="8dp"
        android:right="8dp">
        <shape>
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ff4de4b6" android:endColor="#ff22dddd" android:angle="90" />
        </shape>
    </item>
    <!--bottom是横线高度 -->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
