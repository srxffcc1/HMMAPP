<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    tools:ignore="Orientation">
    <TextView
        android:id="@+id/enoughTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_mall_goods_ol_vid_red"
        tools:text="满返"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textColor="#fff02846"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/quanTitle"
        app:layout_constraintTop_toBottomOf="@id/quanTitle" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/enoughContext"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        tools:text="满100享1件赠品，满200享2件赠品，满300享3件赠品，满400享4件赠品"
        android:textColor="#ff222222"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/enoughTitle"
        app:layout_constraintLeft_toRightOf="@id/enoughTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/enoughTitle" />

    <ImageView
        android:id="@+id/discountMore"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_more_pin"
        app:layout_constraintBottom_toBottomOf="@id/discountLeft"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/discountLeft" />
</LinearLayout>