<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.healthy.library.widget.CornerImageView
            android:id="@+id/groupIcon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="35dp"
            app:is_circle="true"
            android:layout_height="35dp"
            android:src="@drawable/img_avatar_default_man"
            />
        <TextView
            android:id="@+id/groupName"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toRightOf="@id/groupIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@+id/groupTeamLL"
            android:layout_height="wrap_content"
            android:text="爱睡觉的考拉"
            android:textColor="#ff444444"
            android:textSize="14sp"
            />
        <LinearLayout
            android:id="@+id/groupTeamLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            app:layout_constraintRight_toLeftOf="@id/groupButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/groupTeamNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还差1人成团"
                android:textColor="#ff444444"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/groupTimeLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余00:00:00"
                android:textColor="#666666"
                android:textSize="10sp"
                />
        </LinearLayout>
        <TextView
            android:background="@drawable/shape_dis_group_join2"
            android:id="@+id/groupButton"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintRight_toRightOf="parent"
            android:text="去参团"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#F02846"
            android:textSize="12sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/dividerN"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="2px"
        android:background="#E4E8EE">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>