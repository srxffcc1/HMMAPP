<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:layout_marginTop="@dimen/status_2020"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="28dp"
        android:id="@+id/noMSgImg"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/status_empty_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/noMSgTitle"
        android:layout_marginTop="15dp"
        android:paddingBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/noMSgImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抱歉，没有找到相关商品"
        android:textColor="#ff868799"
        android:textSize="14sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
