<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="wrap_content">
    <com.healthy.library.widget.CornerImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        app:corner_radius="8dp"
        android:id="@+id/soundEdititonIcon"
        android:layout_height="100dp"
        android:src="@drawable/ic_questioner_default_avatar"
        />
    <TextView
        android:id="@+id/soundEdititonTitle"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="9dp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@id/soundEdititonIcon"
        app:layout_constraintTop_toTopOf="@id/soundEdititonIcon"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:text="佟彤中医养护50讲"
        android:textStyle="bold"
        android:textColor="#ff333333"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/soundEdititonCotent"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/soundEdititonTitle"
        app:layout_constraintTop_toTopOf="@id/soundEdititonIcon"
        app:layout_constraintBottom_toBottomOf="@id/soundEdititonIcon"
        android:layout_height="wrap_content"
        android:text="好故事和爱，都是无价的"
        android:textColor="#ff666666"
        android:textSize="13sp"
        />
    <com.healthy.library.widget.ImageTextView
        android:id="@+id/soundEditionPlays"
        android:layout_marginBottom="9dp"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/soundEdititonTitle"
        app:layout_constraintBottom_toBottomOf="@id/soundEdititonIcon"
        android:layout_height="wrap_content"
        android:text="510.2万"
        android:gravity="center"
        android:textSize="10sp"
        app:drawableHeight="20dp"
        android:textColor="#555555"
        android:drawablePadding="5dp"
        app:drawableWidth="20dp"
        app:drawable="@drawable/ic_collection_plays"/>
    <com.healthy.library.widget.ImageTextView
        app:layout_constraintLeft_toRightOf="@id/soundEditionPlays"
        app:layout_constraintTop_toTopOf="@id/soundEditionPlays"
        app:layout_constraintBottom_toBottomOf="@id/soundEditionPlays"
        android:id="@+id/soundEditionBook"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33"
        android:textColor="#555555"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:textSize="10sp"
        app:drawableHeight="20dp"
        app:drawableWidth="20dp"
        app:drawable="@drawable/ic_collection_book"/>
    <ImageView
        android:id="@+id/soundEditionPlay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/soundEdititonIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/ic_sound_play"/>
</androidx.constraintlayout.widget.ConstraintLayout>