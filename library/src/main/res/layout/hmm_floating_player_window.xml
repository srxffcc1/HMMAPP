<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="175dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_video_bgg"
        android:layout_width="98dp"
        android:layout_height="168dp">
        <FrameLayout
            android:id="@+id/ppt_container"
            android:layout_width="90dp"
            android:layout_height="160dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_video_bgg2" />
        <FrameLayout
            android:id="@+id/video_container"
            app:layout_constraintTop_toTopOf="@id/ppt_container"
            app:layout_constraintLeft_toLeftOf="@id/ppt_container"
            android:layout_width="90dp"
            android:layout_height="160dp" />
        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/video_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="去围观"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/tv_video_flag"
            app:layout_constraintTop_toTopOf="@id/ppt_container"
            app:layout_constraintLeft_toLeftOf="@id/ppt_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/video_left_bottom"/>
            <ImageView
                android:id="@+id/tv_video_flag_c"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/video_left_bottom_c">
            </ImageView>
            <TextView
                android:id="@+id/tv_video_flag_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="2dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_video_flag_c"
                android:text="直播中"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/close_floating_window"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/update_close2"/>

</androidx.constraintlayout.widget.ConstraintLayout>