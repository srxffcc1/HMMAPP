<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="Orientation">


    <HorizontalScrollView
        android:id="@+id/setHoLL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/setRightLL"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/setP"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_mall_goods_ol_vid_set_flame"
        app:layout_constraintBottom_toBottomOf="@id/setHoLL"
        app:layout_constraintRight_toLeftOf="@id/setRightLL"
        app:layout_constraintTop_toTopOf="@+id/setHoLL" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setRightLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/discountbbg"
            app:layout_constraintBottom_toBottomOf="@id/divMoney"
            app:layout_constraintLeft_toLeftOf="@id/divMoney"
            app:layout_constraintRight_toRightOf="@id/divMoney"
            app:layout_constraintTop_toTopOf="@id/divMoney" />

        <TextView
            android:id="@+id/divMoney"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="7dp"
            tools:text="省¥287.96"

            android:textColor="#fff02846"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/allMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="¥899"
            android:textStyle="bold"
            android:textColor="#ff222222"

            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/divMoney"
            app:layout_constraintRight_toRightOf="@id/divMoney"
            app:layout_constraintTop_toBottomOf="@id/divMoney" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/payMoneyLL"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_mall_goods_ol_vid_red_btn"
            app:layout_constraintLeft_toLeftOf="@id/divMoney"
            app:layout_constraintRight_toRightOf="@id/divMoney"
            app:layout_constraintTop_toBottomOf="@id/allMoney">
            <TextView
                android:id="@+id/payMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:text="立即下单"

                android:textColor="#ffffffff"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/payMoneyLater"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:24:56\n即将开售"
                android:maxLines="2"
                android:paddingRight="17dp"
                android:paddingLeft="17dp"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
