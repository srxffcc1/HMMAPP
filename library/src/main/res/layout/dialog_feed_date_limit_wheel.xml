<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="44dp"
    tools:ignore="SpUsage">

    <com.healthy.library.watcher.AlphaTextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wheel_cancel"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:textSize="16dp"
        android:textColor="#9596A4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.healthy.library.watcher.AlphaTextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wheel_confirm"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:textSize="16dp"
        android:textColor="#FF6266"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_cancel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_choose_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择时间段"
        android:textColor="#ff222222"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@id/tv_confirm"
        app:layout_constraintStart_toStartOf="@id/tv_cancel"
        app:layout_constraintBottom_toBottomOf="@id/tv_cancel"/>

    <TextView
        android:id="@+id/startTimeTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_time_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间"
        android:textColor="#ff222222"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/endTimeTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/startCon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间"
        android:textColor="#ff222222"
        android:textSize="14sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/startCon"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/shape_tools_datepick_w"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/startTimeTitle">
        <LinearLayout
            android:id="@+id/picker_start_yearLL"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/picker_start_monthLL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.healthy.library.widget.WheelPicker
                android:id="@+id/picker_start_year"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:halfVisibleItemCount="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#222222"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/picker_start_monthLL"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/picker_start_yearLL"
            app:layout_constraintTop_toTopOf="@id/picker_start_yearLL"
            app:layout_constraintEnd_toStartOf="@+id/picker_start_dayLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.healthy.library.widget.WheelPicker
                android:id="@+id/picker_start_month"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:halfVisibleItemCount="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#222222"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/picker_start_dayLL"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/picker_start_monthLL"
            app:layout_constraintTop_toTopOf="@id/picker_start_yearLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.healthy.library.widget.WheelPicker
                android:id="@+id/picker_start_day"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:halfVisibleItemCount="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#222222"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/endCon"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/shape_tools_datepick_w"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/endTimeTitle">
        <LinearLayout
            android:id="@+id/picker_end_yearLL"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/picker_end_monthLL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.healthy.library.widget.WheelPicker
                android:id="@+id/picker_end_year"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:halfVisibleItemCount="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#222222"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/picker_end_monthLL"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/picker_end_yearLL"
            app:layout_constraintTop_toTopOf="@id/picker_end_yearLL"
            app:layout_constraintEnd_toStartOf="@+id/picker_end_dayLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.healthy.library.widget.WheelPicker
                android:id="@+id/picker_end_month"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:halfVisibleItemCount="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#222222"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/picker_end_dayLL"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/picker_end_monthLL"
            app:layout_constraintTop_toTopOf="@id/picker_end_yearLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.healthy.library.widget.WheelPicker
                android:id="@+id/picker_end_day"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:halfVisibleItemCount="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#222222"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>