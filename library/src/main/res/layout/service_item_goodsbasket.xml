<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource,Orientation">
    <com.healthy.library.widget.AutoFitCheckBox
        android:id="@+id/basketCheck"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="10dp"
        android:src="@drawable/selector_tools_anonymous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/basketImg"
        app:layout_constraintBottom_toBottomOf="@id/basketImg">

    </com.healthy.library.widget.AutoFitCheckBox>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_marginTop="15dp"
        android:id="@+id/basketActLL"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/basketImg"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/basketFlag"
            android:background="@drawable/shape_disact_basket"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="秒杀"
            android:textStyle="bold"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            />
        <TextView
            android:layout_marginLeft="6dp"
            android:id="@+id/basketFlagT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/basketFlag"
            app:layout_constraintBottom_toBottomOf="@id/basketFlag"
            app:layout_constraintLeft_toRightOf="@id/basketFlag"
            app:layout_constraintRight_toLeftOf="@+id/basketFlagButton"
            tools:text="距离结束还剩"
            android:textColor="#ff222222"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/basketFlagTT"
            android:visibility="gone"
            android:layout_marginLeft="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/basketFlagT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="9月23日23:59 活动结束"
            android:textColor="#fff02846"
            android:textSize="13sp"
            />
        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/basketFlagT"
            android:id="@+id/timeLiner"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kickDay"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:minWidth="15dp"
                android:gravity="center"
                android:background="@drawable/shape_disact_red_small_2"
                android:text="23"
                android:fontFamily="sans-serif-medium"
                android:textColor="#F02846"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/kickDayT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="天"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#F02846"/>
            <TextView
                android:id="@+id/kickHour"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_disact_red_small_2"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="2dp"
                android:text="23"
                android:textColor="#F02846"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text=":"
                android:textColor="#F02846"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kickMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/shape_disact_red_small_2"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="2dp"
                android:text="23"
                android:textColor="#F02846"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text=":"
                android:textColor="#F02846"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kickSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/shape_disact_red_small_2"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="2dp"
                android:text="23"
                android:textColor="#F02846"
                android:textSize="10sp" />


        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/basketFlagV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/basketFlag"
            app:layout_constraintBottom_toBottomOf="@id/basketFlag"
            app:layout_constraintLeft_toRightOf="@id/basketFlagT"
            android:text="¥9.9"
            android:layout_marginLeft="1dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#ff222222"
            android:textSize="14sp"
            />
        <com.healthy.library.widget.ImageTextView
            android:id="@+id/basketFlagButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/basketFlag"
            app:layout_constraintBottom_toBottomOf="@id/basketFlag"
            android:text="去拼团"
            android:textStyle="bold"
            app:drawable="@drawable/ic_more_pin_black"
            app:position="3"
            app:drawableHeight="15dp"
            app:drawableWidth="8dp"
            android:drawablePadding="4dp"
            android:textColor="#222222"
            android:textSize="13sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.healthy.library.widget.CornerImageView
        android:id="@+id/basketImg"
        app:corner_radius="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toBottomOf="@id/basketActLL"
        app:layout_constraintLeft_toRightOf="@id/basketCheck"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_1_1_default"
        />
    <TextView
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/basketImg"
        app:layout_constraintLeft_toRightOf="@id/basketImg"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/basketTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml"
        android:textColor="#ff222222"
        android:textSize="14sp"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/basketTitle"
        app:layout_constraintLeft_toLeftOf="@id/basketTitle"
        android:id="@+id/basketSku"
        android:layout_width="0dp"
        android:layout_marginTop="6dp"

        android:layout_height="wrap_content"
        tools:text="210ml 红色"
        android:textColor="#ff666666"
        android:textSize="12sp"
        />
    <TextView
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="@id/basketImg"
        app:layout_constraintLeft_toLeftOf="@id/basketTitle"
        android:id="@+id/basketMoney"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="¥52.9"
        android:textColor="#fff02846"
        android:textSize="14sp"
        />
    <com.healthy.library.widget.IncreaseDecreaseView
        android:id="@+id/increase_decrease"
        app:max_count="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/basketImg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/limitLine"
        android:minHeight="7dp"
        app:layout_constraintTop_toBottomOf="@id/basketMoney"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:id="@+id/limitLineText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#D5DBE4"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/limitCon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/limitConTop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="8dp"
                android:layout_height="6dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/act_tri_top"/>

            <TextView
                android:id="@+id/limitText"
                android:background="@drawable/act_money_limit_bg"
                app:layout_constraintTop_toBottomOf="@id/limitConTop"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                tools:text="购买超过3件时，不再享受优惠！"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>