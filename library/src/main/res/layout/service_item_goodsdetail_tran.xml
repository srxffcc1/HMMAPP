<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:background="#000"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="Orientation">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/basketLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_mall_goods_ol_vid_float"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tranLL"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/basketTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选"
                android:textColor="#ff666666"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="@id/basketCount"
                app:layout_constraintBottom_toBottomOf="@id/basketCount"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/basketCount"
                android:layout_marginLeft="9dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="（3）"
                android:singleLine="true"
                android:textColor="#ff222222"
                android:textSize="12sp"
                app:layout_constraintRight_toLeftOf="@id/basketMore"
                app:layout_constraintBottom_toBottomOf="@id/basketTitle"
                app:layout_constraintLeft_toRightOf="@id/basketTitle"
                app:layout_constraintTop_toTopOf="@id/basketTitle" />

            <ImageView
                android:id="@+id/basketMore"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_more_pin"
                app:layout_constraintBottom_toBottomOf="@id/basketTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/basketTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/ruleLL"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/tranLL"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ruleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选"
                android:textColor="#ff666666"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="@id/ruleTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ruleTitle"/>

            <TextView
                android:id="@+id/ruleCount"
                android:layout_marginLeft="9dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="1、支付开团/参团；\n2、邀请好友参团；\n3、人满成团；\n4、人不满退款；"
                android:textColor="#ff222222"
                android:textSize="12sp"
                android:maxLines="4"
                android:ellipsize="end"
                app:layout_constraintRight_toLeftOf="@id/ruleMore"
                app:layout_constraintBottom_toBottomOf="@id/ruleTitle"
                app:layout_constraintLeft_toRightOf="@id/ruleTitle"
                app:layout_constraintTop_toTopOf="@id/ruleTitle" />

            <ImageView
                android:id="@+id/ruleMore"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_more_pin"
                app:layout_constraintBottom_toBottomOf="@id/ruleTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ruleTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>