<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    tools:ignore="MissingDefaultResource,Orientation">
    <com.healthy.library.widget.CornerImageView
        android:id="@+id/goodsImg"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:corner_radius="4dp"
        android:src="@drawable/img_1_1_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/goodsTitle"
        android:layout_width="70dp"
        android:layout_marginTop="2dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/goodsImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        android:text="美赞臣安儿宝A+无乳…配方婴幼儿营养配方奶粉"
        android:textColor="#ff444444"
        android:textSize="12sp"
        />
    <LinearLayout
        android:id="@+id/goodsTagsLL"
        app:layout_constraintTop_toBottomOf="@id/goodsTitle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/goodsMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¥299"
            android:visibility="gone"
            android:textColor="#fffa3c5a"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/goodsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="#ff666666"
            android:textSize="10sp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>