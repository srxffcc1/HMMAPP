<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:paddingTop="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource,Orientation">
    <TextView
        android:id="@+id/basketCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_mall_goods_ol_vid_basket_error_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="失效"
        android:textColor="#ffffffff"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent">

    </TextView>
    <com.healthy.library.widget.CornerImageView
        android:id="@+id/basketImg"
        app:corner_radius="3dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/basketCheck"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_1_1_default"
        />
    <TextView
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/basketImg"
        app:layout_constraintLeft_toRightOf="@id/basketImg"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/basketTitle"
        android:layout_width="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="爱护抑菌泡泡洗手液250ml"
        android:textColor="#ff868799"
        android:textSize="14sp"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/basketTitle"
        app:layout_constraintLeft_toLeftOf="@id/basketTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/basketSku"
        android:layout_width="0dp"
        android:layout_marginTop="6dp"

        android:layout_height="wrap_content"
        android:text="210ml 红色"
        android:textColor="#ff868799"
        android:textSize="12sp"
        />
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/basketTitle"
        android:id="@+id/basketMoney"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¥52.9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#ff868799"
        android:textSize="14sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>