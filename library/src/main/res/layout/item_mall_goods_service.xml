<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="6dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_mall_goods_yellow"
        android:padding="8dp">

        <com.healthy.library.widget.ImageTextView
            android:id="@+id/mall_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawablePadding="4dp"

            android:text="精选服务"
            android:textColor="#ff222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:drawable="@drawable/mall_service_left"
            app:drawableHeight="20dp"
            app:drawableWidth="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberTmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <LinearLayout
            android:id="@+id/mall_service_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/mall_service">

<!--            <include layout="@layout/item_mall_goods_service_banneritem2" />-->

<!--            <include layout="@layout/item_mall_goods_service_banneritem2" />-->

<!--            <include layout="@layout/item_mall_goods_service_banneritem2" />-->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mall_service_liner" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
