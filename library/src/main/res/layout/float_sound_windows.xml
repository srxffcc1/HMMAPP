<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@drawable/shape_sound_float_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/floatCloseLL"
            android:padding="5dp"
            style="@style/RippleClick"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/floatClose"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/flaot_sound_close"/>
        </LinearLayout>

        <LinearLayout
            app:layout_constraintLeft_toRightOf="@id/floatCloseLL"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toLeftOf="@id/floatSoundControlLL"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/floatName"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
            <ProgressBar
                android:layout_marginTop="3dp"
                android:id="@+id/soundProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:progress="20"
                android:indeterminate="true"
                android:indeterminateTint="#4DC9D8"
                android:progressDrawable="@drawable/progressz_bar_sound"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/floatSoundControlLL"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/floatSoundPre"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/flaot_sound_pre"/>
            <ImageView
                android:id="@+id/floatSoundPlay"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/flaot_sound_play"/>
            <ImageView
                android:id="@+id/floatSoundNext"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/flaot_sound_next"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>