<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource,Orientation">

    <com.healthy.library.widget.CornerImageView
        android:id="@+id/basketImg"
        app:corner_radius="3dp"
        android:layout_marginLeft="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/img_1_1_default"
        />
    <TextView
        android:id="@+id/basketImgNo"
        app:layout_constraintBottom_toBottomOf="@id/basketImg"
        app:layout_constraintLeft_toLeftOf="@id/basketImg"
        app:layout_constraintRight_toRightOf="@id/basketImg"
        android:background="@drawable/shape_mall_goods_ol_vid_counter_gift_no"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="已领完"
        android:visibility="gone"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/basketFlag"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        app:layout_constraintLeft_toRightOf="@id/basketImg"
        app:layout_constraintTop_toTopOf="@id/basketImg"
        android:background="@drawable/shape_mall_goods_ol_vid_counter_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赠品"
        android:textColor="#fff00028"
        android:textSize="11sp"
        />

    <TextView
        android:maxLines="2"
        android:layout_marginLeft="4dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/basketImg"
        app:layout_constraintLeft_toRightOf="@id/basketFlag"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/basketTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:text="爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml"
        android:textColor="#ff222222"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/price"
        app:layout_constraintBottom_toBottomOf="@id/basketImg"
        app:layout_constraintLeft_toLeftOf="@id/basketFlag"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥0.00"
        android:textColor="#ff222222"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/giftCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x 1"
        android:textColor="#ff222222"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@id/giftDiv"
        app:layout_constraintTop_toTopOf="@id/price"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="@id/price"
        />
    <TextView
        android:id="@+id/giftDiv"
        android:visibility="gone"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="#AEB3BF"
        app:layout_constraintRight_toLeftOf="@id/delete"
        app:layout_constraintTop_toTopOf="@id/delete"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="@id/delete"
        />
    <TextView
        android:id="@+id/delete"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/basketImg"
        android:text="删除"
        android:textColor="#ff222222"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/limitLineGiftText"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:layout_marginTop="10dp"
        android:background="#D5DBE4"/>
</androidx.constraintlayout.widget.ConstraintLayout>