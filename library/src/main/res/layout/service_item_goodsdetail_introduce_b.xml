<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="Orientation">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moneyLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/moneyLLTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/moneyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格说明"
                android:textStyle="bold"
                android:textColor="#ff222222"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/moneyValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/moneyLLTop" />
        <TextView
            android:id="@+id/moneyValueBottom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:visibility="gone"
            android:text=""
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/moneyValue" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>