<?xml version="1.0" encoding="utf-8"?>
<com.example.lib_ShapeView.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prize_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingVertical="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:shape_solidColor="#FFF7EC"
    app:shape_radius="6dp">

    <ImageView
        android:id="@+id/prize_activity_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_1_1_default"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prize_activity_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/color_222222"
        android:textSize="14dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@id/prize_activity_img"
        app:layout_constraintTop_toTopOf="@id/prize_activity_img"
        app:layout_constraintRight_toLeftOf="@+id/tv_action"
        tools:text="天使宝宝评选天使宝宝评选天使宝宝评选天使宝宝评选天使宝宝评选天使宝宝评选" />

    <TextView
        android:id="@+id/prize_child_activity_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="时间:2021.06.02-2021.06.05"
        android:textColor="@color/color_666666"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/prize_activity_title"
        app:layout_constraintLeft_toLeftOf="@id/prize_activity_title"
        app:layout_constraintRight_toRightOf="@id/prize_activity_title"/>

    <TextView
        android:id="@+id/prize_child_activity_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="地址:江苏省苏州市高新区运河路乐嘉汇"
        android:textColor="@color/color_666666"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/prize_child_activity_time"
        app:layout_constraintLeft_toLeftOf="@id/prize_activity_title"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/select_action_enabled"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:paddingVertical="2dp"
        android:text="我要报名"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/prize_activity_img" />

</com.example.lib_ShapeView.layout.ShapeConstraintLayout>