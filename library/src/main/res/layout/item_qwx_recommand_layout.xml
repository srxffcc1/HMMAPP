<?xml version="1.0" encoding="utf-8"?>
<com.example.lib_ShapeView.layout.ShapeConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:padding="12dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="16dp"
    android:layout_height="wrap_content"
    app:shape_radius="12dp"
    app:shape_solidColor="#FFF"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/groupnName"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:text="优贝儿直播福利群"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/groupnName"
        android:id="@+id/groupnSecondName"
        android:layout_width="0dp"
        android:maxLines="2"
        android:lines="2"
        android:includeFontPadding="false"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/groupnName"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="0dp"
        android:layout_height="32dp"
        android:text="在家躺平也能参与的福利盛宴"
        android:textColor="#ff666666"
        android:textSize="10sp"
        />
    <com.example.lib_ShapeView.view.ShapeTextView
        android:id="@+id/groupnButtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即入群"
        android:layout_marginTop="10dp"
        app:shape_solidColor="#32C0AD"
        app:shape_radius="16dp"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:paddingHorizontal="11dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/groupnSecondName"
        />
    <LinearLayout
        android:id="@+id/pinTitleLfet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/shape_act_k_w_12"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/groupnButtom">

        <LinearLayout
            android:id="@+id/pinHeadIconLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="2dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal">
            <!--<include layout="@layout/dis_item_head_h"/>-->

            <com.healthy.library.widget.CornerImageView
                app:is_circle="true"
                android:src="@drawable/tx09"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <com.healthy.library.widget.CornerImageView
                app:is_circle="true"
                android:src="@drawable/tx08"
                android:layout_marginLeft="-4dp"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <com.healthy.library.widget.CornerImageView
                app:is_circle="true"
                android:src="@drawable/tx10"
                android:layout_marginLeft="-4dp"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/pinMenber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="正在火热讨论"
            android:textColor="#ff666666"
            android:textSize="10sp" />
    </LinearLayout>

</com.example.lib_ShapeView.layout.ShapeConstraintLayout>