<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:background="#FFF"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource,Orientation">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/payFinishTopOkLL"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/pagImg"
            android:layout_marginTop="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/payok"/>
        <TextView
            android:id="@+id/payContext"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/pagImg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您支付成功"

            android:textColor="#ff222222"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/payTime"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/payContext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="3秒后自动跳转商品首页"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/payFinishTopNoLL"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/payFinishTopOkLL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/pagNoImg"
            android:layout_marginTop="50dp"
            android:layout_width="117dp"
            android:layout_height="99dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/payfail"/>
        <TextView
            android:id="@+id/payNoTime"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/pagNoImg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="糟糕～支付失败"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@id/payFinishTopNoLL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/leftBtn"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回首页"
            android:background="@drawable/shape_mall_goods_ol_vid_basket_empty_btn"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tabs"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#fff02846"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/rightBtn"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看订单"
            android:textStyle="bold"
            android:background="@drawable/shape_mall_goods_ol_vid_basket_empty_btn2"
            android:textColor="#fff02846"
            android:textSize="14sp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>