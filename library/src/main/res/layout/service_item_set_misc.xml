<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_height="match_parent">
    <com.healthy.library.widget.CornerImageView
        android:id="@+id/goodsSetImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:corner_radius="3dp"
        android:src="@drawable/img_1_1_default"
        />
    <TextView
        android:id="@+id/goodsSetMoney"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥152.69"

        android:textColor="#ff222222"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/goodsSetTitle"
        app:layout_constraintTop_toTopOf="@id/goodsSetImage"
        app:layout_constraintLeft_toRightOf="@id/goodsSetImage"
        app:layout_constraintRight_toLeftOf="@id/goodsSetMoney"
        android:layout_width="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Babycare 吸管杯学饮杯宝宝水杯重吸管杯学饮杯宝宝水杯重吸管…"
        android:textColor="#ff222222"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/goodsSetCount"
        android:layout_marginTop="2dp"
        app:layout_constraintRight_toRightOf="@id/goodsSetMoney"
        app:layout_constraintTop_toBottomOf="@id/goodsSetMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x 1"
        android:textColor="#ff222222"
        android:textSize="12sp"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="goodsSetTitle,goodsSetCount"/>
    <TextView
        android:id="@+id/goodsSetSkuStr"
        app:layout_constraintLeft_toLeftOf="@id/goodsSetTitle"
        app:layout_constraintRight_toLeftOf="@id/goodsSetCount"
        app:layout_constraintTop_toBottomOf="@id/goodsSetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/goodsSetSku"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:layout_constraintLeft_toLeftOf="@id/goodsSetTitle"
        app:layout_constraintRight_toLeftOf="@id/goodsSetCount"
        app:layout_constraintTop_toBottomOf="@id/goodsSetTitle">
        <include layout="@layout/service_item_set_misc_spinner"/>
    </com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>