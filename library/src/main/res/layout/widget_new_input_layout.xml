<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_new_input_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/widget_new_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="昵称" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/widget_new_input_end"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/mine_ic_more"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/widget_new_input_EditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:background="@color/colorTransparent"
        android:gravity="right|center_vertical"
        android:textSize="14sp"
        android:paddingRight="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/widget_new_input_title"
        app:layout_constraintRight_toLeftOf="@id/widget_new_input_end"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="请填写昵称" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/widget_new_input_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="请选择生日日期"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/widget_new_input_end"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:visibility="gone"
        android:id="@+id/widget_new_input_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>