<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_mall_goods_ol_vid_counter_type"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp"
    tools:ignore="MissingDefaultResource,Orientation">
    <LinearLayout
        android:id="@+id/discountTopLL"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<!--        <include layout="@layout/service_item_goodsbasket_topdiscount_item"/>-->
<!--        <include layout="@layout/service_item_goodsbasket_topdiscount_item"/>-->
<!--        <include layout="@layout/service_item_goodsbasket_topdiscount_item"/>-->
<!--        <include layout="@layout/service_item_goodsbasket_topdiscount_item"/>-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/discountMoreLL"
        app:layout_constraintTop_toBottomOf="@id/discountTopLL"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <com.healthy.library.widget.ImageTextView
            android:paddingTop="10dp"
            android:id="@+id/discountMoreImg"
            android:drawablePadding="4dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多促销"
            android:textSize="11sp"
            app:drawable="@drawable/discountdown"
            app:position="3"
            app:drawableHeight="8dp"
            app:drawableWidth="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>