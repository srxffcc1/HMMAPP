<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <com.healthy.library.widget.TopBar
        android:id="@+id/top_bar"
        android:paddingTop="@dimen/status_2020"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_moss="false"
        app:title="憨妈妈收银台"/>

    <com.healthy.library.widget.StatusLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_pay_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="38dp"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#ff444444"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="19.90"
                        android:fontFamily="@font/din_medium"
                        android:textColor="#ff444444"
                        android:textSize="36sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/goodsTimeLLS"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付剩余时间"
                        android:textColor="#fff02846"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/kickHour"
                        android:fontFamily="@font/din_medium"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:gravity="center"
                        android:background="@drawable/shape_group_red_small"
                        android:text="23"
                        android:textColor="#ffffffff"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=":"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:textColor="#FC2347"/>
                    <TextView
                        android:id="@+id/kickMin"
                        android:fontFamily="@font/din_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/shape_group_red_small"
                        android:text="23"
                        android:textColor="#ffffffff"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=":"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:textColor="#FC2347"/>
                    <TextView
                        android:id="@+id/kickSec"
                        android:fontFamily="@font/din_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:background="@drawable/shape_group_red_small"
                        android:text="23"
                        android:textColor="#ffffffff"
                        android:textSize="11sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <com.healthy.library.widget.DeepRadioGroup
                android:layout_width="match_parent"
                android:id="@+id/checkGroup"
                app:layout_constraintTop_toBottomOf="@id/ll_pay_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:background="@drawable/shape_mall_goods_ol_vid_counter_type"
                    android:layout_height="wrap_content">
                    <com.healthy.library.widget.ImageTextView
                        android:id="@+id/weixinTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信支付"
                        android:gravity="center"
                        app:drawable="@drawable/weixinz"
                        android:textColor="#ff222222"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        app:drawableHeight="25dp"
                        android:layout_marginBottom="15dp"
                        app:drawableWidth="25dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/centerDiv"/>
                    <CheckBox
                        android:id="@+id/weixinCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:button="@drawable/selector_tools_anonymous"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/weixinTitle"
                        app:layout_constraintBottom_toBottomOf="@id/weixinTitle">

                    </CheckBox>
                    <TextView
                        android:id="@+id/centerDiv"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D8D8D8"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <com.healthy.library.widget.ImageTextView
                        android:id="@+id/alpayTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝支付"
                        app:drawable="@drawable/alpayz"
                        android:textColor="#ff222222"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        app:drawableHeight="25dp"
                        app:drawableWidth="25dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/centerDiv"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <CheckBox
                        android:id="@+id/alpayCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:button="@drawable/selector_tools_anonymous"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/alpayTitle"
                        app:layout_constraintBottom_toBottomOf="@id/alpayTitle">

                    </CheckBox>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.healthy.library.widget.DeepRadioGroup>


            <TextView
                android:id="@+id/txt_submit"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:fontFamily="@font/din_medium"
                android:onClick="pay"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_mall_goods_ol_vid_counter_btn"
                android:text="微信支付 ¥39.8"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.healthy.library.widget.StatusLayout>


</LinearLayout>