<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/shape_couponuse_list"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_choose_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:text="优惠"
                    android:textStyle="bold"
                    android:textColor="#ff222222"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/closeBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@id/tv_choose_time_title"
                    android:layout_alignBottom="@id/tv_choose_time_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/dialog_close"></ImageView>
            </RelativeLayout>

        </LinearLayout>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/cardActsP"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="促销"
                        android:textStyle="bold"
                        android:textColor="#ff222222"
                        android:textSize="14sp"
                        />
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardActsLL"
                        android:orientation="vertical">


<!--                                            <include layout="@layout/service_item_goodsdetail_discount_item" />-->

                        <!--                    <include layout="@layout/service_item_goodsdetail_discount_item" />-->

                        <!--                    <include layout="@layout/service_item_goodsdetail_discount_item" />-->
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    android:id="@+id/couponTxt"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"
                    android:textColor="#ff222222"
                    android:textSize="14sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardLL"
                    android:orientation="vertical">
<!--                    <com.healthy.library.widget.StatusLayout-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:id="@+id/empty"-->
<!--                        app:empty_drawable="@drawable/empty_coupon"-->
<!--                        app:empty_txt="暂无可领取的优惠券"-->
<!--                        android:layout_height="wrap_content">-->
<!--                    </com.healthy.library.widget.StatusLayout>-->
<!--                    <include layout="@layout/dis_item_card"/>-->
<!--                    <include layout="@layout/dis_item_card"/>-->
<!--                    <include layout="@layout/dis_item_card"/>-->
<!--                    <include layout="@layout/dis_item_card"/>-->
                </LinearLayout>
            </LinearLayout>

        </ScrollView>



    </LinearLayout>


</LinearLayout>