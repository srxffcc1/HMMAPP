<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"

    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/readlView"
        android:paddingTop="15dp"
        android:background="#FFF"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">
        <com.healthy.library.widget.CornerImageView
            android:id="@+id/helpIcon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="34dp"
            app:is_circle="true"
            android:src="@drawable/img_avatar_default_man"
            android:layout_height="34dp"
            />
        <TextView
            android:id="@+id/helpName"
            android:layout_marginLeft="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/helpIcon"
            app:layout_constraintRight_toLeftOf="@+id/helpMoney"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            tools:text="快乐柠檬草"
            android:textColor="#ff444444"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/helpTip"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/helpName"
            app:layout_constraintLeft_toLeftOf="@id/helpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没吃米，力气小了点"
            android:textColor="#ff9596a4"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/helpMoney"
            android:gravity="center"
            android:drawablePadding="3dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/helpIcon"
            app:layout_constraintBottom_toBottomOf="@id/helpIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="砍掉2.81元"
            android:textColor="#ff444444"
            android:textSize="14sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noMsgCon"
        android:layout_width="match_parent"
        android:padding="50dp"
        android:visibility="gone"
        android:background="#FFF"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/readlView">
        <ImageView
            android:id="@+id/noMsg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="115dp"
            android:layout_height="89dp"
            android:src="@drawable/no_message"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/noMsg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无好友信息"
            android:layout_marginTop="30dp"
            android:textColor="#ff666666"
            android:textSize="14sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>