<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource,Orientation">
    <com.healthy.library.widget.AutoFitCheckBox
        android:id="@+id/basketCheck"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="10dp"
        android:visibility="invisible"
        android:src="@drawable/selector_tools_anonymous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/basketImg"
        app:layout_constraintBottom_toBottomOf="@id/basketImg">

    </com.healthy.library.widget.AutoFitCheckBox>

    <com.healthy.library.widget.CornerImageView
        android:id="@+id/basketImg"
        app:corner_radius="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/basketCheck"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_1_1_default"
        />
    <TextView
        android:id="@+id/pointLable"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_order_list_gift_lable"
        android:gravity="center"
        android:text="赠品"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/basketImg"
        app:layout_constraintLeft_toLeftOf="@+id/basketImg"
        app:layout_constraintRight_toRightOf="@+id/basketImg" />
    <TextView
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/basketImg"
        app:layout_constraintLeft_toRightOf="@id/basketImg"
        app:layout_constraintRight_toLeftOf="@+id/giftCount"
        android:id="@+id/basketTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml爱护抑菌泡泡洗手液250ml"
        android:textColor="#ff222222"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/basketFlag"
        android:visibility="gone"
        android:background="@drawable/shape_disact_basket"
        app:layout_constraintLeft_toLeftOf="@+id/basketTitle"
        app:layout_constraintTop_toBottomOf="@id/basketTitle"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赠品"
        android:textStyle="bold"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        />
    <TextView
        android:id="@+id/giftCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x 1"
        android:textColor="#ff222222"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/basketImg"
        android:layout_marginRight="3dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>