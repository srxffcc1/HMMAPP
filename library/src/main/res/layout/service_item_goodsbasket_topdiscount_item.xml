<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:layout_marginTop="6dp"
    tools:ignore="MissingDefaultResource,Orientation">

    <LinearLayout
        android:layout_width="0dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="32dp"
        android:background="@drawable/shape_mall_goods_ol_vid_discountsingle"
        android:textColor="#ff333333"
        android:textSize="12sp"
        />
    <LinearLayout
        android:id="@+id/discountSingleMore"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选赠品"
            android:textColor="#F00028"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="13sp"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/tools_r_more"
            android:layout_height="12dp">

        </ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:id="@+id/discountContent"
        android:layout_marginRight="6dp"
        android:singleLine="true"
        app:layout_constraintRight_toLeftOf="@id/discountSingleMore"
        app:layout_constraintLeft_toRightOf="@id/discountTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="17dp"
        android:text="合生元满3件享6.8折，再购1件即享"
        android:textColor="#ff333333"
        android:textSize="12sp"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/discountTitle"
        app:layout_constraintBottom_toBottomOf="@id/discountTitle"
        app:layout_constraintLeft_toLeftOf="@id/discountTitle"
        app:layout_constraintRight_toRightOf="@id/discountTitle"
        android:src="@drawable/discountrbg"/>
    <TextView
        android:id="@+id/discountTitle"
        android:paddingTop="3dp"
        android:layout_marginLeft="11dp"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:paddingRight="13dp"
        android:layout_width="wrap_content"
        android:text="满减"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>