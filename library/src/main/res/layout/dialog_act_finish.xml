<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:id="@+id/dialog_bg"
        android:background="@drawable/shape_act_finish"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dialog_img"
            android:layout_width="24dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/act_finish_question"
            android:layout_height="24dp">

        </ImageView>
        <TextView
            android:id="@+id/actFinishContext"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/dialog_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="抱歉！您来晚了\n秒杀活动已经结束~"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/dialog_close_button_tmp"
        android:layout_below="@id/dialog_bg"
        android:layout_width="20dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp"></ImageView>
    <ImageView
        android:id="@+id/dialog_close_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_below="@id/dialog_close_button_tmp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dis_dialog_close3"/>
</RelativeLayout>