<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/shape_goods_discount_line1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/pinMoneyLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/pinMoneyTeamNum"
                app:layout_constraintTop_toTopOf="@id/pinMoney"
                app:layout_constraintBottom_toBottomOf="@id/pinMoney"
                android:text="¥"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/pinMoney"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintLeft_toRightOf="@id/pinMoneyLeft"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="259.9"
                android:textColor="#ffffffff"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/pinMoneyTeamNum"
                android:background="@drawable/shape_discount_teamnumber"
                app:layout_constraintTop_toTopOf="@id/pinMoney"
                app:layout_constraintBottom_toBottomOf="@id/pinMoney"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:text="可砍至"
                android:textStyle="bold"
                android:textColor="#fff02846"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/pinMoneySingle"
                app:layout_constraintTop_toBottomOf="@id/pinMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/pinMoneyTeamNum"
                tools:text="原价￥398.8"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_goods_discount_line2"
            android:paddingLeft="25dp"
            android:paddingRight="15dp"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="78dp"
                    android:layout_height="19dp"
                    android:text="距离结束还剩"
                    android:textColor="#ff7a180f"
                    android:textSize="13sp"
                    />
                <LinearLayout
                    android:id="@+id/goodsTimeLL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/kickDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:gravity="center"
                        android:background="@drawable/shape_disact_red_small"
                        android:text="23"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#ffffffff"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/kickDayT"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="天"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:textColor="#F02846"/>
                    <TextView
                        android:id="@+id/kickHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:background="@drawable/shape_disact_red_small"
                        android:text="23"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#ffffffff"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:textColor="#F02846"/>
                    <TextView
                        android:id="@+id/kickMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/shape_disact_red_small"
                        android:text="23"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#ffffffff"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:textColor="#F02846"/>
                    <TextView
                        android:id="@+id/kickSec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:background="@drawable/shape_disact_red_small"
                        android:text="23"
                        android:textColor="#ffffffff"
                        android:textSize="11sp"
                        />
                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>