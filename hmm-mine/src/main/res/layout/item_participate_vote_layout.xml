<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_new_order_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_participate_vote"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_1_1_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_activity_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="天使宝宝评选天使宝宝评选天使宝宝评选"
        android:textColor="@color/color_222222"
        android:textSize="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_participate_vote"
        app:layout_constraintTop_toTopOf="@id/iv_participate_vote" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_activity_endTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@mipmap/ic_sub_order_time_grey"
        android:drawablePadding="3dp"
        android:text="2021.06.02-2021.06.05"
        android:gravity="center|left"
        android:textColor="@color/color_b3b3b3"
        android:textSize="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/item_activity_title"
        app:layout_constraintTop_toBottomOf="@id/item_activity_title" />

    <LinearLayout
        android:id="@+id/item_prize_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="28dp"
        android:maxHeight="32dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_participate_vote"
        app:layout_constraintLeft_toLeftOf="@id/item_activity_endTime">

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:background="@color/color_f5f5f5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_participate_vote"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_participate_vote" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_action"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:background="@drawable/select_action_enabled"
        android:enabled="true"
        android:gravity="center"
        android:text="去投票"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintRight_toRightOf="@id/line"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>