<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F9"
    tools:ignore="ResourceName">

    <com.healthy.library.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:show_moss="false"
        app:title="" />

    <com.healthy.library.widget.StatusLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:status_init="content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/zixngBg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/submitZxingLine"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/zxing_scan_bg"/>
            <TextView
                android:id="@+id/zixngTitle"
                app:layout_constraintTop_toTopOf="@id/zixngBg"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="43dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加企业二维码"
                android:textColor="#ff222222"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/zixngSTitle"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/zixngTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择上传企业二维码，与顾客更进一步"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
            <ImageView
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/zixngSTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/zxingImg"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/zxing_default"
                />
            <com.example.lib_ShapeView.view.ShapeTextView
                app:shape_solidColor="#FFE9E9"
                android:id="@+id/zxingTip"
                app:shape_radius="8dp"
                android:paddingHorizontal="17dp"
                android:paddingVertical="6dp"
                app:layout_constraintTop_toTopOf="@id/zxingImg"
                app:layout_constraintLeft_toLeftOf="@id/zxingImg"
                app:layout_constraintRight_toRightOf="@id/zxingImg"
                app:layout_constraintBottom_toBottomOf="@id/zxingImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击选择"
                android:textStyle="bold"
                android:textColor="#fffa3c5a"
                android:textSize="16sp"
                />

            <com.example.lib_ShapeView.view.ShapeTextView
                android:id="@+id/submitZxing"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@id/zxingImg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shape_solidColor="#DCDDDC"
                app:shape_radius="25dp"
                android:paddingHorizontal="80dp"
                android:paddingVertical="12dp"
                android:text="上传二维码"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/submitZxingLine"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/submitZxing"
                android:layout_height="50dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.healthy.library.widget.StatusLayout>


</androidx.constraintlayout.widget.ConstraintLayout>