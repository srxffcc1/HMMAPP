<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_shape_order"
    android:paddingTop="20dp"
    android:paddingBottom="11dp"
    tools:ignore="SpUsage">

    <com.healthy.library.widget.DrawableTextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/ic_sub_left_store"
        android:textColor="#222222"
        android:drawablePadding="5dp"
        android:lines="1"
        android:clickable="true"
        android:focusable="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        app:drawable_size="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="到店服务"/>

    <com.healthy.library.widget.DrawableTextView
        android:id="@+id/tv_home_name"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/ic_sub_left_home"
        android:textColor="#222222"
        android:drawablePadding="5dp"
        android:lines="1"
        android:clickable="true"
        android:focusable="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        app:drawable_size="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="上门服务"/>
    <TextView
        android:id="@+id/timeTitle"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_store_name"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_store_name"
        android:layout_height="wrap_content"
        android:text="时间："
        android:textColor="#ff222222"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/timeTitle"
        app:layout_constraintTop_toTopOf="@id/timeTitle"
        app:layout_constraintBottom_toBottomOf="@id/timeTitle"
        android:text="2020-03-28 17:00    "
        android:textColor="#ff222222"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/timeTip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/time"
        app:layout_constraintTop_toTopOf="@id/timeTitle"
        app:layout_constraintBottom_toBottomOf="@id/timeTitle"
        android:text="(今天)"
        android:textColor="#ffff5d72"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/addressTitle"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timeTitle"
        app:layout_constraintLeft_toLeftOf="@id/timeTitle"
        android:text="地点："
        android:textColor="#ff222222"
        android:textSize="13sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addressLL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/addressTitle"
        app:layout_constraintBottom_toBottomOf="@id/addressTitle"
        app:layout_constraintLeft_toRightOf="@id/addressTitle"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/addressLoc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="憨妈妈母婴生活馆(金山东路店)"
            android:textColor="#ff222222"
            android:textSize="14sp"
            />



        <ImageView
            android:id="@+id/addressLoc"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/addressMore"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_sub_left_loc"/>

        <ImageView
            android:id="@+id/addressMore"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_more_bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/teachTitle"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addressTitle"
        app:layout_constraintLeft_toLeftOf="@id/addressTitle"
        android:text="老师："
        android:textColor="#ff222222"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/teach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/teachTitle"
        app:layout_constraintTop_toTopOf="@id/teachTitle"
        app:layout_constraintBottom_toBottomOf="@id/teachTitle"
        android:text="李晓丽"
        android:textColor="#ff222222"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/teachTip"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="@id/tv_cancel"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toRightOf="@id/teach"
        app:layout_constraintTop_toTopOf="@id/teachTitle"
        app:layout_constraintBottom_toBottomOf="@id/teachTitle"
        tools:text="憨妈妈母婴生活馆(金山东路店)提供"
        android:textColor="#ff666666"
        android:textSize="12sp"
        />

    <View
        android:id="@+id/divider_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E4E8EE"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teachTitle"/>
    <TextView
        android:id="@+id/createTime"
        app:layout_constraintTop_toTopOf="@id/tv_cancel_tmp"
        app:layout_constraintBottom_toBottomOf="@id/tv_cancel_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交时间：2020-03-25 17:21:40"

        app:layout_constraintLeft_toLeftOf="@id/addressTitle"
        android:textColor="#ff9596a4"
        android:textSize="12sp"
        />
    <com.healthy.library.watcher.AlphaTextView
        android:id="@+id/tv_cancel_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        android:paddingTop="5dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:paddingBottom="5dp"
        android:text="@string/mine_order_cancel"
        android:textSize="14dp"
        android:gravity="center"
        android:textColor="#9596A4"
        android:layout_marginEnd="10dp"
        android:background="@drawable/mine_shape_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_bottom"/>

    <com.healthy.library.watcher.AlphaTextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="5dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:paddingBottom="5dp"
        android:text="@string/mine_order_cancel"
        android:textSize="14dp"
        android:gravity="center"
        android:textColor="#9596A4"
        android:layout_marginEnd="10dp"
        android:background="@drawable/mine_shape_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_bottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>