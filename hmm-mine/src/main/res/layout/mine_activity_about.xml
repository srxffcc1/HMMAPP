<?xml version="1.0" encoding="utf-8"?>
<com.healthy.library.widget.StatusLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F9"
    app:status_init="content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SettingsActivity">

        <com.healthy.library.widget.TopBar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:show_moss="false"
            app:title="关于憨妈妈APP"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iv_logoll"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/mine_ic_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="0dp"
                android:text="V1.0.0"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:textColor="#ff222222"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                tools:ignore="SpUsage"/>
        </androidx.constraintlayout.widget.ConstraintLayout>




        <com.healthy.library.widget.SectionView
            android:id="@+id/section_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFF"
            android:onClick="checkVersionClick"
            app:layout_constraintTop_toBottomOf="@id/iv_logoll"
            app:section_divider_full_width="false"
            app:section_end_src="@drawable/mine_ic_more"
            app:section_title="检测新版本"
            app:section_end_size="10dp"/>
        <ImageView
            android:id="@+id/hasUpdateFlag"
            android:layout_width="27dp"
            android:layout_height="12dp"
            android:src="@drawable/update_need_flag"
            app:layout_constraintTop_toTopOf="@id/section_version"
            app:layout_constraintBottom_toBottomOf="@id/section_version"
            app:layout_constraintLeft_toLeftOf="@id/section_version"
            android:layout_marginLeft="90dp"/>


        <com.healthy.library.widget.SectionView
            android:id="@+id/section_about1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="passHMMXY"
            android:background="#FFF"
            app:layout_constraintTop_toBottomOf="@id/section_version"
            app:section_divider_full_width="false"
            app:section_end_src="@drawable/mine_ic_more"
            app:section_title="憨妈妈用户协议"
            app:section_end_size="10dp"/>
        <com.healthy.library.widget.SectionView
            android:id="@+id/section_about2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="passHMMXXFB"
            android:background="#FFF"
            app:section_end_src="@drawable/mine_ic_more"
            app:layout_constraintTop_toBottomOf="@id/section_about1"
            app:section_divider_full_width="false"
            app:section_title="同城圈信息发布管理规范"
            app:section_end_size="10dp"/>
        <com.healthy.library.widget.SectionView
            android:id="@+id/section_about3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFF"
            app:section_end_src="@drawable/mine_ic_more"
            app:layout_constraintTop_toBottomOf="@id/section_about2"
            app:section_divider_full_width="false"
            app:section_title="隐私政策"
            android:onClick="passHMMYSCL"
            app:section_end_size="10dp"/>
        <com.healthy.library.widget.SectionView
            android:id="@+id/section_about4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFF"
            app:section_end_src="@drawable/mine_ic_more"
            app:layout_constraintTop_toBottomOf="@id/section_about3"
            app:section_divider_full_width="false"
            android:onClick="passHMMZXYSCL"
            app:section_title="咨询服务隐私政策"
            app:section_end_size="10dp"/>
        <com.healthy.library.widget.SectionView
            android:id="@+id/section_about5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFF"
            app:section_des="0512-68152717"
            app:layout_constraintTop_toBottomOf="@id/section_about4"
            app:section_divider_full_width="false"
            android:onClick="passCall"
            app:section_title="联系我们"
            app:section_end_size="10dp"/>

        <TextView
            android:visibility="gone"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:onClick="logout"
            android:text="@string/mine_setting_logout"
            android:background="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="0dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:textColor="#9596A4"
            android:textSize="11sp"
            android:text="苏ICP备19042355号-1 Tel:0512-569843\n
Copyright © 1999-2019 HanMama Network Technology"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="SpUsage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.healthy.library.widget.StatusLayout>
