<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource,ResourceName">


    <ImageView
        android:id="@+id/invitePostImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/invitetopimg2"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="750:142"
        android:src="@drawable/invitetopimgunder"
        app:layout_constraintBottom_toBottomOf="@id/invitePostImg"/>


    <com.gongwen.marqueen.MarqueeView
        android:id="@+id/inviteJoinMan"
        android:layout_width="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@id/invitePostImg"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp"
        android:paddingVertical="7dp"
        android:textColor="#ffffff"
        android:flipInterval="3500"
        android:autoStart="true"
        android:inAnimation="@anim/in_bottom"
        android:outAnimation="@anim/out_top"
        app:marqueeAnimDuration="500"
        android:background="@drawable/shape_invite_top_top"
        android:textSize="14sp"
        >
    </com.gongwen.marqueen.MarqueeView>

    <TextView
        android:id="@+id/inviteRule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/shape_invite_top_right"
        android:gravity="center"
        android:padding="8dp"
        android:text="活\n动\n规\n则"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
