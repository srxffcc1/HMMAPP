<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#FFFAF0"
    tools:ignore="ResourceName">
    <TextView
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        android:id="@+id/top_card_black_bg"
        app:layout_constraintBottom_toBottomOf="@id/top_card_bg"
        android:background="#000"/>

    <TextView
        android:id="@+id/top_bar_tmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="84dp" />
    <ImageView
        android:id="@+id/top_card_bg"
        app:layout_constraintTop_toBottomOf="@id/top_bar_tmp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="745:232"
        android:src="@drawable/vip_right_card_bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.88"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/top_card_bg"
        app:layout_constraintBottom_toBottomOf="@id/top_card_bg">
        <ImageView
            android:id="@+id/vip_card_left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/vip_card_icon"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/vip_card_left"
            app:layout_constraintRight_toLeftOf="@id/vip_card_status"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:id="@+id/vip_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="精致小脸轻点打"
                android:textColor="#ffffc768"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/vip_time"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/vip_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                tools:text="超级会员至：2020-05-24"
                android:textColor="#ffffe2aa"
                android:textSize="12sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/vip_card_status"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_vip_status_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看会员状态"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="#ffd7b27c"
            android:textSize="12sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/vip_title"
        app:layout_constraintTop_toBottomOf="@+id/top_card_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="超级会员"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textColor="#ff333333"
        android:textSize="16sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/vip_title"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/vip_super_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="702:208"
            android:src="@drawable/vip_super_bg"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/vip_super_bg"
            app:layout_constraintBottom_toBottomOf="@id/vip_super_bg"
            app:layout_constraintLeft_toLeftOf="@id/vip_super_bg"
            app:layout_constraintRight_toRightOf="@id/vip_super_bg">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="32"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="520"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <com.healthy.library.widget.ImageTextView
                        app:drawable="@drawable/plus_left"
                        app:position="2"
                        app:drawableWidth="44dp"
                        app:drawableHeight="44dp"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:drawablePadding="8dp"
                        android:text="线下门店专享价"
                        android:textColor="#ff3b2607"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <com.healthy.library.widget.ImageTextView
                        app:drawable="@drawable/plus_right"
                        app:position="2"
                        app:drawableWidth="44dp"
                        app:drawableHeight="44dp"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:drawablePadding="8dp"
                        android:text="在线PLUS会员折扣"
                        android:textColor="#ff3b2607"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="150"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多特权\n即将上线"
                    android:textColor="#ff3b2607"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>