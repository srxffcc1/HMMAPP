<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:background="@drawable/shape_invite_bg"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_invite_top_bottom_top_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/titleLL"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="7dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/invitelinebg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您已成功邀请"
                android:textStyle="bold"
                android:textColor="#D7451D"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/inviteJoinCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#D7451D"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位"
                android:textStyle="bold"
                android:textColor="#D7451D"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="7dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/invitelinebg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/titleLL"
            android:layout_height="wrap_content">
            <include layout="@layout/mine_item_adapter_invitebottomtitle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="13dp"
                android:background="#F3D9C6"/>
<!--            <include layout="@layout/mine_item_adapter_invitebottomman2"/>-->
<!--            <include layout="@layout/mine_item_adapter_invitebottomman"/>-->
<!--            <include layout="@layout/mine_item_adapter_invitebottomman2"/>-->
<!--            <include layout="@layout/mine_item_adapter_invitebottomman"/>-->
<!--            <include layout="@layout/mine_item_adapter_invitebottomman2"/>-->
<!--            <include layout="@layout/mine_item_adapter_invitebottomman"/>-->
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/invitetitlebg"/>
</androidx.constraintlayout.widget.ConstraintLayout>

